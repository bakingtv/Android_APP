<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" >

    <FrameLayout
        android:id="@+id/main_screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/title_bar"
            android:layout_width="match_parent"
            android:layout_height="68px"
            android:background="@drawable/title_box"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/title_icon"
                android:layout_width="53px"
                android:layout_height="49px"
                android:layout_gravity="left"
                android:layout_marginLeft="12px"
                android:layout_marginTop="9px"
                android:background="@drawable/back_btn"
                android:visibility="gone" />

            <TextView
                android:id="@+id/title_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text="빠른 응시 결과 "
                android:textColor="#FFFFFF"
                android:textSize="24px" />

            <TextView
                android:id="@+id/title_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="98px"
                android:layout_marginRight="10px"
                android:layout_marginTop="10px"
                android:ellipsize="end"
                android:lines="1"
                android:maxLines="1"
                android:text=""
                android:textColor="#FFFFFF"
                android:textSize="0dip" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="652px"
            android:layout_marginTop="68px"
            android:orientation="vertical" >

            <ScrollView
                android:id="@+id/data_view_scroll"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/data_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" >
                </LinearLayout>
            </ScrollView>
        </FrameLayout>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@drawable/bg_list"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/bottom_menu_1"
            android:layout_width="480px"
            android:layout_height="58px"
            android:layout_marginTop="10px"
            android:orientation="horizontal" 
            android:gravity="center">

            <ImageView
                android:id="@+id/bottom_1"
                android:layout_width="152px"
                android:layout_height="58px"
                android:layout_gravity="center"
                android:layout_marginLeft="15px"
                android:layout_marginRight="7px"
                android:background="@drawable/later_btn" />



            <ImageView
                android:id="@+id/bottom_3"
                android:layout_width="153px"
                android:layout_height="58px"
                android:layout_gravity="center"
                android:layout_marginLeft="7px"
                android:layout_marginRight="7px"
                android:background="@drawable/followed_by_btn" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>