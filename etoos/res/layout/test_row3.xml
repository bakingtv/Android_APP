<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="92px"
    android:layout_weight="10"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/mainlist_box"
        android:layout_width="match_parent"
        android:layout_height="92px"
        android:background="@drawable/list_box"
        android:orientation="horizontal"
        android:weightSum="1" >

        <FrameLayout
            android:id="@+id/shop_intro_1_1"
            android:layout_width="480px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/number_1"
                android:layout_width="65px"
                android:layout_height="75px"
                android:layout_marginBottom="12px"
                android:layout_marginLeft="77px"
                android:layout_marginTop="12px"
                android:src="@drawable/basic_0" />

            <ImageView
                android:id="@+id/number_2"
                android:layout_width="65px"
                android:layout_height="75px"
                android:layout_marginBottom="12px"
                android:layout_marginLeft="142px"
                android:layout_marginTop="12px"
                android:src="@drawable/basic_0" />

            <ImageView
                android:id="@+id/number_3"
                android:layout_width="65px"
                android:layout_height="75px"
                android:layout_marginBottom="12px"
                android:layout_marginLeft="207px"
                android:layout_marginTop="12px"
                android:src="@drawable/basic_0" />
        </FrameLayout>

        <TextView
            android:id="@+id/number"
            android:layout_width="67px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:background="#eecccc"
            android:gravity="center"
            android:text="37"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/number_x"
            android:layout_width="57px"
            android:layout_height="49px"
            android:layout_marginBottom="12px"
            android:layout_marginLeft="408px"
            android:layout_marginTop="22px"
            android:layout_weight="0"
            android:background="@drawable/q_type"
            android:visibility="gone" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginTop="-2sp"
        android:src="@drawable/line" />

</LinearLayout>