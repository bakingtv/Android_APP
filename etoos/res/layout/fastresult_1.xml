<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/omr_bg"
     >

    <FrameLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/title_line"
            android:layout_width="480px"
            android:layout_height="170px"
            android:layout_gravity="left"
            android:layout_marginTop="9px"
            android:background="@drawable/omr_top_bg" />

        <ImageView
            android:id="@+id/title_box"
            android:layout_width="480px"
            android:layout_height="68px"
            android:layout_gravity="left"
            android:background="@drawable/title_box" />

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15px"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text="채점하기 "
            android:textColor="#FFFFFF"
            android:textSize="24px" />

        <TextView
            android:id="@+id/title_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="98px"
            android:layout_marginRight="10px"
            android:layout_marginTop="10px"
            android:ellipsize="end"
            android:lines="1"
            android:maxLines="1"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="0dip" />

        <LinearLayout
            android:id="@+id/result_data_2"
            android:layout_width="450px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16px"
            android:layout_marginTop="80px"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/result_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:text="수학"
                android:textColor="#07a5e0"
                android:textSize="20px" />

            <TextView
                android:id="@+id/result_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:text="수학"
                android:textColor="#ff9e05"
                android:textSize="20px" />
        </LinearLayout>

        <TextView
            android:id="@+id/result_title_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="16px"
            android:layout_marginTop="105px"
            android:gravity="left"
            android:text="수학"
            android:textColor="#3c3c3c"
            android:textSize="20px" />

        <FrameLayout
            android:id="@+id/mainlist_box"
            android:layout_width="match_parent"
            android:layout_height="45px"
            android:layout_marginTop="135px"
            android:background="@drawable/list_box"
            android:orientation="horizontal"
            android:weightSum="1" >

            <TextView
                android:id="@+id/grid_title_1"
                android:layout_width="67px"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="NO."
                android:textSize="24px" />

            <TextView
                android:id="@+id/grid_title_2"
                android:layout_width="300px"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="70px"
                android:gravity="center"
                android:text="정답체크"
                android:textSize="24px" />

            <TextView
                android:id="@+id/grid_title_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="370px"
                android:gravity="center"
                android:text="배점"
                android:textSize="24px" />
        </FrameLayout>
    </FrameLayout>

    <ListView
        android:id="@+id/test_list"
        android:layout_width="match_parent"
        android:layout_height="540px"
        android:layout_marginTop="179px"
        android:background="#FFFFFF" />

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="80px"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:background="@drawable/bg_list"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/bottom_menu_1"
            android:layout_width="480px"
            android:layout_height="58px"
            android:layout_marginTop="10px"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/bottom_1"
                android:layout_width="153px"
                android:layout_height="58px"
                android:layout_gravity="center"
                android:layout_marginLeft="7px"
                android:layout_marginRight="7px"
                android:background="@drawable/scoringcomplete_btn" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>