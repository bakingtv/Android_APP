<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="147px"
    android:layout_weight="10"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/mainlist_box"
        android:layout_width="match_parent"
        android:layout_height="147px"
        android:background="@drawable/list_box"
        android:orientation="horizontal"
        android:weightSum="1" >

        <FrameLayout
            android:id="@+id/shop_intro_1_1"
            android:layout_width="720px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/number_1"
                android:layout_width="98px"
                android:layout_height="120px"
                android:layout_marginBottom="19px"
                android:layout_marginLeft="116px"
                android:layout_marginTop="19px"
                android:src="@drawable/basic_0" />

            <ImageView
                android:id="@+id/number_2"
                android:layout_width="98px"
                android:layout_height="120px"
                android:layout_marginBottom="19px"
                android:layout_marginLeft="227px"
                android:layout_marginTop="19px"
                android:src="@drawable/basic_0" />

            <ImageView
                android:id="@+id/number_3"
                android:layout_width="98px"
                android:layout_height="120px"
                android:layout_marginBottom="19px"
                android:layout_marginLeft="331px"
                android:layout_marginTop="19px"
                android:src="@drawable/basic_0" />
        </FrameLayout>

        <TextView
            android:id="@+id/number"
            android:layout_width="101px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:background="#eecccc"
            android:gravity="center"
            android:text="37"
            android:textColor="#000000"
            android:textSize="60px" />

        <ImageView
            android:id="@+id/number_x"
            android:layout_width="91px"
            android:layout_height="78px"
            android:layout_marginBottom="19px"
            android:layout_marginLeft="612px"
            android:layout_marginTop="35px"
            android:layout_weight="0"
            android:background="@drawable/q_type"
            android:visibility="gone" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginTop="-2sp"
        android:src="@drawable/line" />

</LinearLayout>