<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="10"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/mainlist_box"
        android:layout_width="match_parent"
        android:layout_height="147px"
        android:background="@drawable/list_box"
        android:orientation="horizontal"
        android:weightSum="1" >

        <FrameLayout
            android:id="@+id/shop_intro_1_1"
            android:layout_width="720px"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/number_1"
                android:layout_width="621px"
                android:layout_height="147px"
                android:layout_marginLeft="102px"
                android:src="@drawable/answers_box" />
        </FrameLayout>

        <ImageView
            android:id="@+id/number_x"
            android:layout_width="86px"
            android:layout_height="78px"
            android:layout_marginBottom="19px"
            android:layout_marginLeft="612px"
            android:layout_marginTop="35px"
            android:layout_weight="0"
            android:background="@drawable/q_type"
            android:visibility="gone" />

        <EditText
            android:id="@+id/sol_1"
            android:layout_width="360px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="165px"
            android:layout_marginTop="56px"
            android:background="@null"
            android:hint="주관식 답안 입력"
            android:maxLength="10"
            android:singleLine="true"
            android:textColor="#000000"
            android:textCursorDrawable="@null"
            android:textSize="30px" />

        <TextView
            android:id="@+id/number"
            android:layout_width="101px"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.2"
            android:background="#eecccc"
            android:gravity="center"
            android:text="37"
            android:textColor="#000000"
            android:textSize="60px" />
    </FrameLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2sp"
        android:layout_marginTop="-2sp"
        android:src="@drawable/line" />

</LinearLayout>