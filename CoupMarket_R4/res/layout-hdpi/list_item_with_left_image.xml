<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dm_gab_120"
    android:background="@drawable/deli_list_bar"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView_photo"
        android:layout_width="@dimen/dm_gab_140"
        android:layout_height="@dimen/dm_gab_110"
        android:layout_marginLeft="@dimen/dm_gab_4"
        android:layout_marginTop="@dimen/dm_gab_6"
        android:scaleType="fitXY"
        android:src="@drawable/area_body_bg" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dm_gab_10"
        android:paddingRight="@dimen/dm_gab_15"
        android:paddingTop="@dimen/dm_gab_6" >

        <TextView
            android:id="@+id/textView_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLargeInverse" />

        <TextView
            android:id="@+id/textView_mileage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#FFFF0000" />

        <TextView
            android:id="@+id/textView_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|left"
            android:paddingBottom="@dimen/dm_gab_4" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="@dimen/dm_gab_60"
                android:layout_height="@dimen/dm_gab_30"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="fitXY"
                android:src="@drawable/deli_menu" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="@dimen/dm_gab_60"
                android:layout_height="@dimen/dm_gab_30"
                android:layout_marginLeft="@dimen/dm_gab_6"
                android:clickable="true"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:scaleType="fitXY"
                android:src="@drawable/deli_card" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>