<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_title_bar_height"
        layout="@layout/top_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/parttime_list_1_bar"
            android:gravity="center_vertical"
            android:padding="@dimen/dm_gab_10"
            android:text="Subject"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="@dimen/dm_gab_10"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/dm_text_normal" />

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_gab_40"
            android:layout_gravity="right|center_vertical"
            android:background="#55555555"
            android:gravity="right|center_vertical"
            android:paddingRight="@dimen/dm_gab_10"
            android:text="Date"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="@dimen/dm_text_normal" />

    </LinearLayout>

</LinearLayout>