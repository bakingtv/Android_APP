<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" xmlns:android="http://schemas.android.com/apk/res/android">

    <include
        android:layout_width="match_parent"
        android:layout_height="@dimen/dm_title_bar_height"
        layout="@layout/top_title_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/common_bg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/dm_gab_10" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="최근 적립된 마일리지"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_gab_2"
                android:layout_marginTop="@dimen/dm_gab_6"
                android:background="#88080808"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dm_gab_10"
                android:background="@drawable/bg_light_round_corner"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_gab_50"
                    android:background="@android:color/transparent"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dm_gab_4"
                    android:paddingRight="@dimen/dm_gab_4" >

                    <TextView
                        android:id="@+id/textView_date"
                        android:layout_width="@dimen/dm_gab_100"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:text="적립일"
                        android:textAppearance="?android:attr/textAppearanceMediumInverse"
                        android:textColor="@android:color/primary_text_light" />

                    <LinearLayout
                        android:layout_width="@dimen/dm_gab_2"
                        android:layout_height="match_parent"
                        android:background="#88888888"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView_history"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:text="적립 및 사용"
                        android:textAppearance="?android:attr/textAppearanceMediumInverse"
                        android:textColor="@android:color/primary_text_light" />

                    <LinearLayout
                        android:layout_width="@dimen/dm_gab_2"
                        android:layout_height="match_parent"
                        android:background="#88888888"
                        android:orientation="vertical" >
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textView_point"
                        android:layout_width="@dimen/dm_gab_90"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:lines="1"
                        android:text="마일리지"
                        android:textAppearance="?android:attr/textAppearanceMediumInverse"
                        android:textColor="@android:color/primary_text_light" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dm_gab_6"
                    android:background="#88888888"
                    android:orientation="vertical" >
                </LinearLayout>

                <ListView
                    android:id="@+id/listView_my_mileage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fadingEdge="none"
                    android:scrollbars="none" >

                </ListView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_gab_2"
                android:layout_marginBottom="@dimen/dm_gab_15"
                android:layout_marginTop="@dimen/dm_gab_15"
                android:background="#88080808"
                android:orientation="vertical" >

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_light_round_corner"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dm_gab_10"
                    android:paddingTop="@dimen/dm_gab_10" >

                    <TextView
                        android:id="@+id/textView_all_mileage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="총마일리지 : 10,000"
                        android:textAppearance="?android:attr/textAppearanceMediumInverse"
                        android:textSize="@dimen/dm_text_medium"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dm_gab_10"
                    android:layout_weight="1"
                    android:background="@drawable/bg_light_round_corner"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/dm_gab_10"
                    android:paddingTop="@dimen/dm_gab_10" >

                    <TextView
                        android:id="@+id/textView_my_mileage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="현재마일리지 : 10,000"
                        android:textAppearance="?android:attr/textAppearanceMediumInverse"
                        android:textSize="@dimen/dm_text_medium"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dm_gab_2"
                android:layout_marginBottom="@dimen/dm_gab_15"
                android:layout_marginTop="@dimen/dm_gab_15"
                android:background="#88080808"
                android:orientation="vertical" >

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/dm_gab_10" >

                <TextView
                    android:id="@+id/textView_my_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="회원님의 등급은 &apos;인턴&apos;입니다."
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>