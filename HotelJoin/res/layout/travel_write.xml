<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <FrameLayout 
        android:id="@+id/main_screen"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	     >
	     
         <FrameLayout 
	        android:id="@+id/main_layout"
		    android:layout_width="match_parent"
		    android:layout_height="800px"   
		    android:orientation="vertical"
		     android:background="@drawable/travel_bg"
		     android:focusable="true"
		     android:focusableInTouchMode="true"
		    >
		    
             <ImageView
                android:id="@+id/mainimage"
                android:layout_width="match_parent"
                android:layout_height="659px"
                android:layout_gravity="left"
                android:layout_marginTop="68px"
                android:background="@drawable/travelwrite_write_bg" />
		     <ImageView
                android:id="@+id/image_bar_1_1"
                android:layout_width="match_parent"
                android:layout_height="65px"
                android:layout_gravity="left"
                android:layout_marginTop="68px"
                android:background="@drawable/tap_bt_bg" />

           
           <ImageView
                android:id="@+id/write"
                android:layout_width="136px"
                android:layout_height="48px"
                android:layout_gravity="left"
                android:layout_marginLeft="335px"
                android:layout_marginTop="76px"
                android:background="@drawable/entry_pic1" />

           <EditText
	            android:id="@+id/write_text"
	            android:layout_width="340px"
	            android:layout_height="100px"
	            android:layout_marginLeft="20px"
	            android:layout_marginTop="210px"
	            android:background="@null"
	            android:textColor="#000000"
	                 android:hint="글을 입력해주세요"
	                 android:textCursorDrawable="@null"
	                 android:gravity="left" 
	                 android:inputType="textMultiLine"
	                 android:textSize="20px" />
           
           <EditText
	            android:id="@+id/write_title"
	            android:layout_width="360px"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="100px"
	            android:layout_marginTop="152px"
	            android:background="@null"
	            android:textColor="#000000"
	            android:hint="제목을 입력해 주세요."
	            android:textCursorDrawable="@null"
	            android:textSize="20px" />
           <ImageView
                android:id="@+id/photo_thum"
                android:layout_width="100px"
                android:layout_height="100px"
                android:layout_gravity="left"
                android:layout_marginLeft="365px"
                android:layout_marginTop="210px"
                />
           
           <ImageView
                android:id="@+id/arrow1"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_gravity="left"
                android:layout_marginLeft="428px"
                android:layout_marginTop="346px"
                 android:background="@drawable/arrow" 
                />
           <ImageView
                android:id="@+id/arrow2"
                android:layout_width="32px"
                android:layout_height="32px"
                android:layout_gravity="left"
                android:layout_marginLeft="428px"
                android:layout_marginTop="416px"
                 android:background="@drawable/arrow" 
                />

           
           <TextView
			     android:id="@+id/text_1"
			     android:layout_width="330px"
			     android:layout_height="wrap_content"
			     android:layout_marginLeft="100px"
			     android:layout_marginTop="350px"
			     android:text="한국"
			     android:textColor="#FF323232"
			     android:textSize="25px" 
			     android:singleLine = "true"
			     />
           <TextView
			     android:id="@+id/text_2"
			     android:layout_width="330px"
			     android:layout_height="wrap_content"
			     android:layout_marginLeft="100px"
			     android:layout_marginTop="420px"
			     android:text="서울"
			     android:textColor="#FF323232"
			     android:textSize="25px" 
			     android:singleLine = "true"
			     />
           
           <TextView
	             android:id="@+id/text_3"
			     android:layout_width="330px"
			     android:layout_height="wrap_content"
			     android:layout_marginLeft="100px"
			     android:layout_marginTop="490px"
			     android:hint="호텔명"
			     android:textColor="#FF323232"
			     android:textSize="25px" 
			     android:singleLine = "true"
			     android:background="@null"/>

           <ImageView
                android:id="@+id/confirm"
                android:layout_width="450px"
                android:layout_height="65px"
                android:layout_gravity="left"
                android:layout_marginLeft="15px"
                android:layout_marginTop="578px"
                 android:background="@drawable/confirm1" 
                />

	    </FrameLayout>
	    
        <FrameLayout
            android:id="@+id/main_layout_2"
            android:layout_width="match_parent"
            android:layout_height="545px"
            android:layout_marginTop="0px"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical" >

            <ListView
			     android:id="@+id/search_list_2"
			     android:layout_width="match_parent"
			     android:layout_height="348px"
			     android:background="#FFFFFF"
			     android:layout_marginTop="130px"
			      />
             <ImageView
                android:id="@+id/image_bar_1_1"
                android:layout_width="match_parent"
                android:layout_height="65px"
                android:layout_gravity="left"
                android:layout_marginTop="68px"
                android:background="@drawable/tap_bt_bg" />
             <ImageView
                android:id="@+id/search_text_bar_1"
                android:layout_width="440px"
                android:layout_height="49px"
                android:layout_gravity="left"
                android:layout_marginLeft="20px"
                android:layout_marginTop="71px"
                android:background="@drawable/textbar" />
           
            <ImageView
                android:id="@+id/search_btn_1"
                android:layout_width="67px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="20px"
                android:layout_marginTop="71px"
                android:background="@drawable/search_btn" />
            <EditText
				android:id="@+id/search_text_1"
				android:layout_width="300px"
				android:layout_height="wrap_content"
				android:layout_marginLeft="100px"
				android:layout_marginTop="85px"
				android:background="@null"
				android:textColor="#000000"
				android:hint="검색어를 입력하세요."
				android:textCursorDrawable="@null"
				android:textSize="20px" />
            <ImageView
                android:id="@+id/page_up_1"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_gravity="left"
                android:layout_marginLeft="0px"
                android:layout_marginTop="472px"
                android:background="@drawable/page_up_1" />
            
           
         </FrameLayout>
	    
 
	    
	    
         <FrameLayout
             android:id="@+id/title_bar"
             android:layout_width="match_parent"
             android:layout_height="68px"
             android:background="@drawable/top_tap_bg"
             android:orientation="vertical"
             >
		    
            <TextView
                 android:id="@+id/title_logo"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 
               	 android:layout_marginTop="12px"
                 android:background="@null"
                 android:gravity="center"
                 android:text="여행일지 작성"
                 android:textColor="#000000"
                 android:textCursorDrawable="@null"
                 android:textSize="40px" />
            
            <ImageView
                android:id="@+id/sub_bar"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_gravity="left"
                android:layout_marginLeft="418px"
                android:layout_marginTop="12px"
                android:background="@drawable/setting"
                android:visibility="gone" />
              
	    </FrameLayout>
	    
 
    </FrameLayout>


	 

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

		<LinearLayout
			android:id="@+id/bottom_menu_1"
			android:layout_width="480px"
			android:layout_height="74px"
			android:orientation="horizontal"   >
			<ImageView
					android:id="@+id/bottom_1"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_1_1_bt"
					android:layout_gravity="left"/>
			<ImageView
					android:id="@+id/bottom_2"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_2_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_3"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_3_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_4"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_4_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_5"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_5_1_bt"
					android:layout_gravity="left"/>
		</LinearLayout>
		

	 </LinearLayout>

</RelativeLayout>