<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <FrameLayout 
        android:id="@+id/main_screen"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	     >
	     
         <FrameLayout 
	        android:id="@+id/main_layout_1"
		    android:layout_width="match_parent"
		    android:layout_height="800px"   
		     android:layout_marginTop="68px" 
		    android:orientation="vertical"
		     android:background="@drawable/login_bg"
		     android:focusable="true"
		     android:focusableInTouchMode="true"
		    >

           <ImageView
                android:id="@+id/member_tab"
                android:layout_width="228px"
                android:layout_height="46px"
                android:layout_gravity="left"
                android:layout_marginLeft="12px"
                android:layout_marginTop="8px"
                android:background="@drawable/member_tab_2" />
           
           <ImageView
                android:id="@+id/no_member_tab"
                android:layout_width="228px"
                android:layout_height="46px"
                android:layout_gravity="left"
                android:layout_marginLeft="240px"
                android:layout_marginTop="8px"
                android:background="@drawable/no_member_tab_3" />
           
           
           <ImageView
                android:id="@+id/login_btn"
                android:layout_width="218px"
                android:layout_height="68px"
                android:layout_gravity="left"
                android:layout_marginLeft="14px"
                android:layout_marginTop="228px"
                android:background="@drawable/login_btn_2" />
           
           <ImageView
                android:id="@+id/join_btn_2"
                android:layout_width="218px"
                android:layout_height="68px"
                android:layout_gravity="left"
                android:layout_marginLeft="248px"
                android:layout_marginTop="228px"
                android:background="@drawable/join_btn" />
           
           
             <EditText
                 android:id="@+id/login_id_data"
                 android:layout_width="300px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="140px"
                 android:layout_marginTop="90px"
                 android:background="@null"
                 android:textColor="#000000"
                 android:hint="아이디"
                 android:textCursorDrawable="@null"
                 android:textSize="20px" 
                 android:visibility="gone"/>
             
             <EditText
                 android:id="@+id/login_id_data_4"
                 android:layout_width="300px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="140px"
                 android:layout_marginTop="90px"
                 android:background="@null"
                 android:textColor="#000000"
                 android:hint="아이디"
                 android:textCursorDrawable="@null"
                 android:textSize="20px" />
             
              <EditText
                  android:id="@+id/login_pass_data"
                  android:layout_width="300px"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="140px"
                  android:layout_marginTop="165px"
                  android:background="@null"
                  android:hint="비밀번호"
                  android:inputType="textPassword"
                  android:textColor="#000000"
                  android:textCursorDrawable="@null"
                  android:textSize="20px"
                  android:visibility="gone" />
              
              <EditText
                  android:id="@+id/login_pass_data_4"
                  android:layout_width="300px"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="140px"
                  android:layout_marginTop="165px"
                  android:background="@null"
                  android:hint="비밀번호"
                  android:inputType="textPassword"
                  android:textColor="#000000"
                  android:textCursorDrawable="@null"
                  android:textSize="20px" />
	    </FrameLayout>
	    
         <FrameLayout
             android:id="@+id/main_layout_2"
             android:layout_width="match_parent"
             android:layout_height="800px"   
		     android:layout_marginTop="68px" 
             android:background="@drawable/login_bg2"
             android:orientation="vertical"
             android:visibility="gone" >

           <ImageView
                android:id="@+id/member_tab_2"
                android:layout_width="228px"
                android:layout_height="46px"
                android:layout_gravity="left"
                android:layout_marginLeft="12px"
                android:layout_marginTop="8px"
                android:background="@drawable/member_tab_1" />
           
           <ImageView
                android:id="@+id/no_member_tab_2"
                android:layout_width="228px"
                android:layout_height="46px"
                android:layout_gravity="left"
                android:layout_marginLeft="240px"
                android:layout_marginTop="8px"
                android:background="@drawable/no_member_tab_4" />
           
           <ImageView
                android:id="@+id/login_btn_2"
                android:layout_width="218px"
                android:layout_height="68px"
                android:layout_gravity="left"
                android:layout_marginLeft="14px"
                android:layout_marginTop="228px"
                android:background="@drawable/login_btn_3" />
           
           
           <ImageView
                android:id="@+id/join_btn"
                android:layout_width="218px"
                android:layout_height="68px"
                android:layout_gravity="left"
                android:layout_marginLeft="248px"
                android:layout_marginTop="228px"
                android:background="@drawable/join_btn" />
           
           
             <EditText
                 android:id="@+id/login_id_data_2"
                 android:layout_width="300px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="140px"
                 android:layout_marginTop="90px"
                 android:background="@null"
                 android:textColor="#000000"
                 android:hint="이름"
                 android:textCursorDrawable="@null"
                 android:textSize="20px" />
             
              <EditText
                  android:id="@+id/login_rese_number"
                  android:layout_width="300px"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="140px"
                  android:layout_marginTop="165px"
                  android:background="@null"
                  android:hint="예약번호"
                  android:textColor="#000000"
                  android:textCursorDrawable="@null"
                  android:textSize="20px" />
              
             
		    

	    </FrameLayout>
	    
	    
         <FrameLayout
             android:id="@+id/title_bar"
             android:layout_width="match_parent"
             android:layout_height="68px"
             android:background="@drawable/top_tap_bg"
             android:orientation="vertical"
             >
		    
            <TextView
                 android:id="@+id/title_logo"
                 android:layout_width="200px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="140px"
               	 android:layout_marginTop="12px"
                 android:background="@null"
                 android:gravity="center"
                 android:text="로그인"
                 android:textColor="#000000"
                 android:textCursorDrawable="@null"
                 android:textSize="40px" />
            
            <ImageView
                android:id="@+id/sub_bar"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_gravity="left"
                android:layout_marginLeft="418px"
                android:layout_marginTop="12px"
                android:background="@drawable/profile_bt_1"
                 android:visibility="gone" />
              
	    </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

		<LinearLayout
			android:id="@+id/bottom_menu_1"
			android:layout_width="480px"
			android:layout_height="74px"
			android:orientation="horizontal"   >
			<ImageView
					android:id="@+id/bottom_1"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_1_1_bt"
					android:layout_gravity="left"/>
			<ImageView
					android:id="@+id/bottom_2"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_2_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_3"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_3_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_4"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_4_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_5"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_5_1_bt"
					android:layout_gravity="left"/>
		</LinearLayout>
		

	 </LinearLayout>
</RelativeLayout>