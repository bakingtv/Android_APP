<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <FrameLayout 
        android:id="@+id/main_screen"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	     >
	     
         <FrameLayout 
	        android:id="@+id/main_layout"
		    android:layout_width="match_parent"
		    android:layout_height="690px"    
		    android:layout_marginTop="68px"
		    android:orientation="vertical"
		     android:background="#FFFFFF"
		    >
		    <android.support.v4.view.ViewPager
                android:id="@+id/detail_gallery"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />
		    <ImageView
                android:id="@+id/bar"
                android:layout_height="53px"    
		    	android:layout_marginTop="610px"
                android:layout_width="match_parent"
                android:background="@drawable/bar"
                 />
		     <ImageView
                android:id="@+id/left"
                android:layout_height="42px"    
		    	android:layout_marginTop="612px"
		    	android:layout_marginLeft="21px"
                android:layout_width="55px"
                android:background="@drawable/leftarrow"
                 />
		     
		     <ImageView
                android:id="@+id/right"
                android:layout_height="42px"    
		    	android:layout_marginTop="612px"
		    	android:layout_marginLeft="405px"
                android:layout_width="55px"
                android:background="@drawable/rightarrow"
                 />
		     
		     <TextView
                 android:id="@+id/image_text"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
               	 android:layout_marginTop="622px"
                 android:background="@null"
                 android:gravity="center"
                 android:text="1/1"
                 android:textColor="#F2F4F6"
                 android:textCursorDrawable="@null"
                 android:textSize="20px" />
             
		    

	    </FrameLayout>
	    
         <FrameLayout 
	        android:id="@+id/title_bar"
		    android:layout_width="match_parent"
		    android:layout_height="68px"
		    android:orientation="vertical"
		    android:background="@drawable/top_tap_bg" >
		    
             <TextView
                 android:id="@+id/title_logo"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
               	 android:layout_marginTop="12px"
                 android:background="@null"
                 android:gravity="center"
                 android:text="호텔 이미지"
                 android:textColor="#000000"
                 android:textCursorDrawable="@null"
                 android:textSize="40px" />
             
            <ImageView
                android:id="@+id/sub_bar"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_gravity="left"
                android:layout_marginLeft="418px"
                android:layout_marginTop="12px"
                android:background="@drawable/profile_bt_1"
                android:visibility="gone" />
              
	    </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

		<LinearLayout
			android:id="@+id/bottom_menu_1"
			android:layout_width="480px"
			android:layout_height="74px"
			android:orientation="horizontal"   >
			<ImageView
					android:id="@+id/bottom_1"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_1_1_bt"
					android:layout_gravity="left"/>
			<ImageView
					android:id="@+id/bottom_2"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_2_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_3"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_3_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_4"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_4_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_5"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_5_1_bt"
					android:layout_gravity="left"/>
		</LinearLayout>
		

	 </LinearLayout>
</RelativeLayout>