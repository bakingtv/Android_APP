<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <FrameLayout 
        android:id="@+id/main_screen"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	     >
	     
         <FrameLayout 
	        android:id="@+id/main_layout_1"
		    android:layout_width="match_parent"
		    android:layout_height="800px"   
		    android:layout_marginTop="68px" 
		    android:orientation="vertical"
		     android:background="@drawable/hotel_bg"
		     android:focusable="true"
		     android:focusableInTouchMode="true"
		    >
		    
             <TextView
                 android:id="@+id/hotel_locate"
                 android:layout_width="250px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="140px"
                 android:layout_marginTop="25px"
                 android:background="@null"
                 android:textColor="#000000"
                 android:text="현재위치"
                 android:textCursorDrawable="@null"
                 android:textSize="14px" />
             
             <ImageView
                android:id="@+id/gps_now"
                android:layout_width="40px"
                android:layout_height="40px"
                android:layout_gravity="left"
                android:layout_marginLeft="410px"
                android:layout_marginTop="18px"
                android:background="@drawable/my_locate_g_1" />
             
             <TextView
                 android:id="@+id/hotel_day"
                 android:layout_width="300px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="140px"
                 android:layout_marginTop="105px"
                 android:background="@null"
                 android:textColor="#000000"
                 android:text="2013/01/13"
                 android:textCursorDrawable="@null"
                 android:textSize="14px" />
             
             <TextView
                 android:id="@+id/hotel_day_number"
                 android:layout_width="80px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="300px"
                 android:layout_marginTop="185px"
                 android:background="@null"
                 android:gravity="center"
                 android:text="1"
                 android:textColor="#000000"
                 android:textCursorDrawable="@null"
                 android:textSize="14px" />
             
             <TextView
                 android:id="@+id/hotel_room"
                 android:layout_width="80px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="300px"
                 android:layout_marginTop="315px"
                 android:background="@null"
                 android:gravity="center"
                 android:text="1"
                 android:textColor="#000000"
                 android:textCursorDrawable="@null"
                 android:textSize="14px" />
             
             
             <TextView
                 android:id="@+id/hotel_room_man"
                 android:layout_width="80px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="300px"
                 android:layout_marginTop="385px"
                 android:background="@null"
                 android:gravity="center"
                 android:text="1"
                 android:textColor="#000000"
                 android:textCursorDrawable="@null"
                 android:textSize="14px" />
             
             
		    <ImageView
                android:id="@+id/inn_day_p"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="413px"
                android:layout_marginTop="171px"
                android:background="@drawable/plus_bt_1" />
		    
		     <ImageView
                android:id="@+id/inn_day_m"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="227px"
                android:layout_marginTop="171px"
                android:background="@drawable/minus_bt_1" />
		     
		      <TextView
                 android:id="@+id/check_out"
                 android:layout_width="240px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="245px"
               	 android:layout_marginTop="248px"
                 android:background="@null"
                 android:gravity="left"
                 android:text="체크아웃 : 2013/01/16"
                 android:textColor="#000000"
                 android:textCursorDrawable="@null"
                 android:textSize="14px" />
		     
		     
		     <ImageView
                android:id="@+id/inn_count_p"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="413px"
                android:layout_marginTop="300px"
                android:background="@drawable/plus_bt_1" />
		    
		     <ImageView
                android:id="@+id/inn_count_m"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="227px"
                android:layout_marginTop="300px"
                android:background="@drawable/minus_bt_1" />
		     
		     <ImageView
                android:id="@+id/inn_man_p"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="413px"
                android:layout_marginTop="377px"
                android:background="@drawable/plus_bt_1" />
		    
		     <ImageView
                android:id="@+id/inn_man_m"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="227px"
                android:layout_marginTop="377px"
                android:background="@drawable/minus_bt_1" />
		     
             
             <ImageView
                android:id="@+id/search_btn"
                android:layout_width="450px"
                android:layout_height="65px"
                android:layout_gravity="left"
                android:layout_marginLeft="21px"
                android:layout_marginTop="480px"
                android:background="@drawable/hotelsearch_g_bt_1" />
             
             

	    </FrameLayout>
	    <FrameLayout
             android:id="@+id/title_bar"
             android:layout_width="match_parent"
             android:layout_height="68px"
             android:background="@drawable/top_tap_bg"
             android:orientation="vertical"
              >
		    
            <TextView
                 android:id="@+id/title_logo"
                 android:layout_width="200px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="140px"
               	 android:layout_marginTop="12px"
                 android:background="@null"
                 android:gravity="center"
                 android:text="호텔 검색"
                 android:textColor="#000000"
                 android:textCursorDrawable="@null"
                 android:textSize="40px" />
            
            <ImageView
                android:id="@+id/sub_bar"
                android:layout_width="48px"
                android:layout_height="48px"
                android:layout_gravity="left"
                android:layout_marginLeft="418px"
                android:layout_marginTop="12px"
                android:background="@drawable/profile_bt_1"
                android:visibility="gone" />
              
	    </FrameLayout>
	    
         <FrameLayout
             android:id="@+id/main_layout_2"
             android:layout_width="match_parent"
             android:layout_height="545px"
             android:layout_marginTop="0px"
             android:focusable="true"
             android:focusableInTouchMode="true"
             android:orientation="vertical"
             android:visibility="gone"
              >

           <ImageView
                android:id="@+id/image_bar_1_1"
                android:layout_width="match_parent"
                android:layout_height="65px"
                android:layout_gravity="left"
                android:background="@drawable/tap_bt_bg" />
           <ImageView
                android:id="@+id/image_bar_1_2"
                android:layout_width="match_parent"
                android:layout_height="65px"
                android:layout_marginTop="65px" 
                android:layout_gravity="left"
                android:background="@drawable/tap_bt_bg" />
           <ImageView
                android:id="@+id/search_tab_1_1"
                android:layout_width="150px"
                android:layout_height="50px"
                android:layout_gravity="left"
                android:layout_marginLeft="16px"
                android:layout_marginTop="7px"
                android:background="@drawable/tap1_2" />
           
           <ImageView
                android:id="@+id/search_tab_2_1"
                android:layout_width="150px"
                android:layout_height="50px"
                android:layout_gravity="left"
                android:layout_marginLeft="166px"
                android:layout_marginTop="7px"
                android:background="@drawable/tap2_1" />
           <ImageView
                android:id="@+id/search_tab_3_1"
                android:layout_width="150px"
                android:layout_height="50px"
                android:layout_gravity="left"
                android:layout_marginLeft="316px"
                android:layout_marginTop="7px"
                android:background="@drawable/tap3_1" />
           

           
           <ImageView
                android:id="@+id/search_text_bar_1"
                android:layout_width="440px"
                android:layout_height="49px"
                android:layout_gravity="left"
                android:layout_marginLeft="20px"
                android:layout_marginTop="71px"
                android:background="@drawable/textbar" />
           
            <ImageView
                android:id="@+id/search_btn_1"
                android:layout_width="67px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="20px"
                android:layout_marginTop="71px"
                android:background="@drawable/search_btn" />
            <EditText
				android:id="@+id/search_text_1"
				android:layout_width="300px"
				android:layout_height="wrap_content"
				android:layout_marginLeft="100px"
				android:layout_marginTop="85px"
				android:background="@null"
				android:textColor="#000000"
				android:hint="검색어를 입력하세요."
				android:textCursorDrawable="@null"
				android:textSize="20px" />
            <ListView
			     android:id="@+id/search_list"
			     android:layout_width="match_parent"
			     android:layout_height="372px"
			     android:background="#FFFFFF"
			     android:layout_marginTop="130px"
			      />
            
            <ImageView
                android:id="@+id/page_up_1"
                android:layout_width="match_parent"
                android:layout_height="50px"
                android:layout_gravity="left"
                android:layout_marginLeft="0px"
                android:layout_marginTop="502px"
                android:background="@drawable/page_up_1" />
            
           
         </FrameLayout>

	    
	    


    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

		<LinearLayout
			android:id="@+id/bottom_menu_1"
			android:layout_width="480px"
			android:layout_height="74px"
			android:orientation="horizontal"   >
			<ImageView
					android:id="@+id/bottom_1"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_1_1_bt"
					android:layout_gravity="left"/>
			<ImageView
					android:id="@+id/bottom_2"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_2_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_3"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_3_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_4"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_4_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_5"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_5_1_bt"
					android:layout_gravity="left"/>
		</LinearLayout>
		

	 </LinearLayout>
</RelativeLayout>