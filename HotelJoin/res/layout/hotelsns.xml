<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <FrameLayout 
        android:id="@+id/main_screen"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	     >
	     
         <FrameLayout 
	        android:id="@+id/main_layout"
		    android:layout_width="match_parent"
		    android:layout_height="658px"    
		    android:layout_marginTop="68px"
		    android:orientation="vertical"
		     android:background="@drawable/common_bg"
		    >
		    

             <ImageView
				     android:id="@+id/main_row_1_bar"
				     android:layout_width="450px"
				     android:layout_height="300px"
				     android:layout_marginLeft="17px"
				     android:layout_marginTop="6px"
				     android:background="@drawable/title_1_bar"
				     />
             <EditText
	            	android:id="@+id/write_text"
	            	android:layout_width="440px"
	            	android:layout_height="270px"
	            	android:layout_marginLeft="24px"
	            	android:layout_marginTop="16px"
	            	android:background="@null"
	            	android:textColor="#000000"
	            	android:hint="글을 입력해주세요"
	                android:textCursorDrawable="@null"
	                android:gravity="left" 
	                android:inputType="textMultiLine"
	                android:textSize="20px" />
             <ImageView
			         android:id="@+id/hotel_image"
			         android:layout_width="480px"
			         android:layout_height="249px"
			         android:layout_gravity="left"
			         android:layout_marginLeft="0px"
			         android:layout_marginTop="353px"
			         android:background="@drawable/common_bg" 
			         />
		    

	    </FrameLayout>
	    
         <FrameLayout 
	        android:id="@+id/title_bar"
		    android:layout_width="match_parent"
		    android:layout_height="68px"
		    android:orientation="vertical"
		    android:background="@drawable/top_tap_bg" >
		    
             <TextView
                 android:id="@+id/title_logo"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
               	 android:layout_marginTop="12px"
                 android:background="@null"
                 android:gravity="center"
                 android:text="SNS 보내기"
                 android:textColor="#000000"
                 android:textCursorDrawable="@null"
                 android:singleLine="true" 
                 android:textSize="40px" />
             
            <ImageView
                android:id="@+id/sub_bar"
                android:layout_width="100px"
                android:layout_height="44px"
                android:layout_gravity="left"
                android:layout_marginLeft="368px"
                android:layout_marginTop="12px"
                android:background="@drawable/sns_1_bt"
                />
              
	    </FrameLayout>

    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

		<LinearLayout
			android:id="@+id/bottom_menu_1"
			android:layout_width="480px"
			android:layout_height="74px"
			android:orientation="horizontal"   >
			<ImageView
					android:id="@+id/bottom_1"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_1_1_bt"
					android:layout_gravity="left"/>
			<ImageView
					android:id="@+id/bottom_2"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_2_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_3"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_3_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_4"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_4_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_5"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_5_1_bt"
					android:layout_gravity="left"/>
		</LinearLayout>
		

	 </LinearLayout>
</RelativeLayout>