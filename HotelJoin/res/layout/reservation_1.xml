<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <FrameLayout 
        android:id="@+id/main_screen"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	     >
	     
         <FrameLayout 
	        android:id="@+id/main_layout"
		    android:layout_width="match_parent"
		    android:layout_height="800px"   
		    android:orientation="vertical"
		     android:focusable="true"
		     android:focusableInTouchMode="true"
		     android:background="@drawable/common_bg"
		    >
		    <ImageView
		        android:id="@+id/hotel_bar"
		        android:layout_width="match_parent"
		        android:layout_height="51px"
		        android:layout_gravity="left"
		        android:layout_marginTop="68px"
		        android:background="@drawable/name_bar" />
				     
			<TextView
		        android:id="@+id/hotel_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="0px"
		        android:layout_marginTop="77px"
		        android:background="@null"
		        android:gravity="center"
		        android:text="르네상스 호텔"
		        android:textColor="#FFFFFF"
		        android:textCursorDrawable="@null"
		        android:textSize="30px" />
			<FrameLayout
			   	android:id="@+id/main_row_1"
			    android:layout_width="480px"
			    android:layout_height="92px"
			    android:background="@drawable/re_listbar_1"
			    android:orientation="vertical"
			    android:layout_marginTop="119px">
			    
		       
		        <TextView
				     android:id="@+id/main_row_1_title"
				     android:layout_width="460px"
				     android:layout_height="wrap_content"
				     android:layout_marginLeft="20px"
				     android:layout_marginTop="8px"
				     android:text="숙박일 2013-01-19 ~ 2013-01-20 "
				     android:textColor="#FF323232"
				     android:textSize="25px" 
				     android:singleLine = "true"
				     />
				
				    
				<TextView
				     android:id="@+id/main_row_1_nick"
				     android:layout_width="260px"
				     android:layout_height="wrap_content"
				     android:layout_marginLeft="20px"
				     android:layout_marginTop="35px"
				     android:gravity="left"
				     android:text="객실수 1개"
				     android:textColor="#222299"
				     android:textSize="20px" 
				     android:singleLine = "true"/>
				
				 <TextView
				     android:id="@+id/main_row_1_day"
				     android:layout_width="360px"
				     android:layout_height="wrap_content"
				     android:layout_marginLeft="20px"
				     android:layout_marginTop="64px"
				     android:text="투숙인원 : 성인 2명 "
				     android:textColor="#FF999999"
				     android:textSize="18px" 
				     android:singleLine = "true"
				     />
		
				<ImageView
				     android:id="@+id/main_row_1_class"
				     android:layout_width="141px"
				     android:layout_height="40px"
				     android:layout_marginLeft="330px"
				     android:layout_marginTop="44px"
				     android:background="@drawable/change1"
				     />
			</FrameLayout >
			<ListView
			     android:id="@+id/main_list"
			     android:layout_width="match_parent"
			     android:layout_height="590px"
			     android:background="#FFFFFF"
			     android:layout_marginTop="211px"
			      />
			
		    
	
	    </FrameLayout>
    </FrameLayout>
    <FrameLayout
		android:id="@+id/title_bar"
		android:layout_width="match_parent"
		android:layout_height="68px"
		android:background="@drawable/top_tap_bg"
		android:orientation="vertical"
		>
					    
		<TextView
		   	android:id="@+id/title_logo"
		    android:layout_width="200px"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="140px"
		    android:layout_marginTop="12px"
		    android:background="@null"
		    android:gravity="center"
		    android:text="예약하기"
		    android:textColor="#000000"
		    android:textCursorDrawable="@null"
		    android:textSize="40px" />
			            
		<ImageView
		    android:id="@+id/sub_bar"
		    android:layout_width="48px"
		    android:layout_height="48px"
		    android:layout_gravity="left"
			android:layout_marginLeft="418px"
			android:layout_marginTop="12px"
			android:background="@drawable/profile_bt_1" 
			android:visibility="gone" />
			              
	</FrameLayout>
	
    <FrameLayout
        android:id="@+id/popup_menu"
        android:layout_width="match_parent"
        android:layout_height="450px"
        android:layout_marginTop="119px"
        android:background="@drawable/change_detail_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:visibility="gone" >

            <TextView
                 android:id="@+id/hotel_day"
                 android:layout_width="300px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="140px"
                 android:layout_marginTop="40px"
                 android:background="@null"
                 android:textColor="#000000"
                 android:text="2013/01/13"
                 android:textCursorDrawable="@null"
                 android:textSize="14px" />
             
             <TextView
                 android:id="@+id/hotel_day_number"
                 android:layout_width="80px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="300px"
                 android:layout_marginTop="110px"
                 android:background="@null"
                 android:gravity="center"
                 android:text="1"
                 android:textColor="#000000"
                 android:textCursorDrawable="@null"
                 android:textSize="14px" />
             
             <TextView
                 android:id="@+id/hotel_room"
                 android:layout_width="80px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="300px"
                 android:layout_marginTop="240px"
                 android:background="@null"
                 android:gravity="center"
                 android:text="1"
                 android:textColor="#000000"
                 android:textCursorDrawable="@null"
                 android:textSize="14px" />
             
             
             <TextView
                 android:id="@+id/hotel_room_man"
                 android:layout_width="80px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="300px"
                 android:layout_marginTop="320px"
                 android:background="@null"
                 android:gravity="center"
                 android:text="1"
                 android:textColor="#000000"
                 android:textCursorDrawable="@null"
                 android:textSize="14px" />
             
             
		    <ImageView
                android:id="@+id/inn_day_p"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="413px"
                android:layout_marginTop="96px"
                android:background="@drawable/plus_bt_1" />
		    
		     <ImageView
                android:id="@+id/inn_day_m"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="227px"
                android:layout_marginTop="96px"
                android:background="@drawable/minus_bt_1" />
		     
		      <TextView
                 android:id="@+id/check_out"
                 android:layout_width="240px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="245px"
               	 android:layout_marginTop="183px"
                 android:background="@null"
                 android:gravity="left"
                 android:text="체크아웃 : 2013/01/16"
                 android:textColor="#000000"
                 android:textCursorDrawable="@null"
                 android:textSize="14px" />
		     
		     
		     <ImageView
                android:id="@+id/inn_count_p"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="413px"
                android:layout_marginTop="235px"
                android:background="@drawable/plus_bt_1" />
		    
		     <ImageView
                android:id="@+id/inn_count_m"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="227px"
                android:layout_marginTop="235px"
                android:background="@drawable/minus_bt_1" />
		     
		     <ImageView
                android:id="@+id/inn_man_p"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="413px"
                android:layout_marginTop="312px"
                android:background="@drawable/plus_bt_1" />
		    
		     <ImageView
                android:id="@+id/inn_man_m"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="227px"
                android:layout_marginTop="312px"
                android:background="@drawable/minus_bt_1" />
		     
             
             <ImageView
                android:id="@+id/search_btn"
                android:layout_width="420px"
                android:layout_height="46px"
                android:layout_gravity="left"
                android:layout_marginLeft="21px"
                android:layout_marginTop="384px"
                android:background="@drawable/change_long1" />

        

	 </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

		<LinearLayout
			android:id="@+id/bottom_menu_1"
			android:layout_width="480px"
			android:layout_height="74px"
			android:orientation="horizontal"   >
			<ImageView
					android:id="@+id/bottom_1"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_1_1_bt"
					android:layout_gravity="left"/>
			<ImageView
					android:id="@+id/bottom_2"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_2_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_3"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_3_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_4"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_4_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_5"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_5_1_bt"
					android:layout_gravity="left"/>
		</LinearLayout>
		

	 </LinearLayout>
</RelativeLayout>