<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    

    <FrameLayout 
        android:id="@+id/main_screen"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	     >
	     
         <FrameLayout 
	        android:id="@+id/main_layout"
		    android:layout_width="match_parent"
		    android:layout_height="665px"   
		     android:layout_marginTop="68px" 
		    android:orientation="vertical"
		     android:background="@drawable/common_bg"
		     android:focusable="true"
		     android:focusableInTouchMode="true"
		    >
			<ImageView
			     android:id="@+id/main_row_back_image"
			     android:layout_width="480px"
			     android:layout_height="92px"
			     android:layout_marginLeft="0px"
			     android:layout_marginTop="0px"
			     android:background="@drawable/re_listbar_1"
			     />	
	             
	             
	        <TextView
			     android:id="@+id/main_row_1_title"
			     android:layout_width="360px"
			     android:layout_height="wrap_content"
			     android:layout_marginLeft="20px"
			     android:layout_marginTop="8px"
			     android:text="내생의 최고의 선물"
			     android:textColor="#FF323232"
			     android:textSize="25px" 
			     android:singleLine = "true"
			     />
			
			    
			<TextView
			     android:id="@+id/main_row_1_nick"
			     android:layout_width="260px"
			     android:layout_height="wrap_content"
			     android:layout_marginLeft="20px"
			     android:layout_marginTop="35px"
			     android:gravity="left"
			     android:text="요모조모님"
			     android:textColor="#222299"
			     android:textSize="20px" 
			     android:singleLine = "true"/>
			
			 <TextView
			     android:id="@+id/main_row_1_day"
			     android:layout_width="360px"
			     android:layout_height="wrap_content"
			     android:layout_marginLeft="20px"
			     android:layout_marginTop="64px"
			     android:text="11월 23일 오후 11:32"
			     android:textColor="#FF999999"
			     android:textSize="18px" 
			     android:singleLine = "true"
			     />
			 <ListView
			    android:id="@+id/main_list"
			    android:layout_width="match_parent"
			    android:layout_height="576px"
			    android:layout_marginTop="92px"
			    android:background="#FFFFFF" >
			</ListView>

			<ImageView
			     android:id="@+id/main_row_1_class"
			     android:layout_width="26px"
			     android:layout_height="20px"
			     android:layout_marginLeft="410px"
			     android:layout_marginTop="30px"
			     android:background="@drawable/reply_icon"
			     />
			<TextView
			     android:id="@+id/main_row_1_class_2"
			     android:layout_width="40px"
			     android:layout_height="30px"
			     android:layout_marginLeft="440px"
			     android:layout_marginTop="25px"
			     android:text="1000"
			     android:textColor="#FF999999"
			     android:textSize="18px" 
			     android:singleLine = "true"
			     android:gravity="center"
			     />
			
			<ImageView
			     android:id="@+id/main_row_2_class"
			     android:layout_width="26px"
			     android:layout_height="20px"
			     android:layout_marginLeft="410px"
			     android:layout_marginTop="55px"
			     android:background="@drawable/travel_good_icon"
			     />
			<TextView
			     android:id="@+id/main_row_2_class_2"
			     android:layout_width="40px"
			     android:layout_height="30px"
			     android:layout_marginLeft="440px"
			     android:layout_marginTop="50px"
			     android:text="1000"
			     android:textColor="#FF999999"
			     android:textSize="18px" 
			     android:singleLine = "true"
			     android:gravity="center"
			     />
		
	    </FrameLayout>
	    <FrameLayout
             android:id="@+id/repl_bar"
             android:layout_width="match_parent"
             android:layout_height="68px"
             android:background="@drawable/traveldetail_coment_bg_"
             android:orientation="vertical"
             android:layout_marginTop="732px"
             >
			 
	        <ImageView
                android:id="@+id/repl_good"
                android:layout_width="72px"
                android:layout_height="67px"
                android:layout_gravity="left"
                android:layout_marginLeft="0px"
                android:layout_marginTop="0px"
                android:background="@drawable/traveldetail_coment_good_"
                 />
			<ImageView
                android:id="@+id/repl_add"
                android:layout_width="70px"
                android:layout_height="43px"
                android:layout_gravity="left"
                android:layout_marginLeft="400px"
                android:layout_marginTop="15px"
                android:background="@drawable/send1"
                 />
			<EditText
        		android:id="@+id/repl_data"
            	android:layout_width="300px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="80px"
                 android:layout_marginTop="25px"
                 android:background="@null"
                 android:textColor="#000000"
                 android:hint="댓글을 입력하세요."
                 android:textCursorDrawable="@null"
                 android:textSize="20px" />
       	</FrameLayout>  
	    
 
	    
	    
         <FrameLayout
             android:id="@+id/title_bar"
             android:layout_width="match_parent"
             android:layout_height="68px"
             android:background="@drawable/top_tap_bg"
             android:orientation="vertical"
             >
		    
            <TextView
                 android:id="@+id/title_logo"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 
               	 android:layout_marginTop="12px"
                 android:background="@null"
                 android:gravity="center"
                 android:text="여행일지"
                 android:textColor="#000000"
                 android:textCursorDrawable="@null"
                 android:textSize="40px" />
            
            <ImageView
                android:id="@+id/sub_bar"
                android:layout_width="75px"
                android:layout_height="49px"
                android:layout_gravity="left"
                android:layout_marginLeft="388px"
                android:layout_marginTop="12px"
                android:background="@drawable/edit1"
                android:visibility="gone" />
              
	    </FrameLayout>
	    
 
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

		<LinearLayout
			android:id="@+id/bottom_menu_1"
			android:layout_width="480px"
			android:layout_height="74px"
			android:orientation="horizontal"   >
			<ImageView
					android:id="@+id/bottom_1"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_1_1_bt"
					android:layout_gravity="left"/>
			<ImageView
					android:id="@+id/bottom_2"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_2_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_3"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_3_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_4"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_4_1_bt"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_5"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/bt_5_1_bt"
					android:layout_gravity="left"/>
		</LinearLayout>
		

	 </LinearLayout>

</RelativeLayout>