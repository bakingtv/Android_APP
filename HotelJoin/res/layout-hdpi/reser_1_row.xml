<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF5F5F5" 
    android:orientation="vertical"
    android:layout_weight="1"
    android:gravity="center">
    
	<FrameLayout
			   	android:id="@+id/main_row_1"
			    android:layout_width="480px"
			    android:layout_height="63px"
			    android:background="@drawable/option_1_bg"
			    android:orientation="vertical">
			    
		       
		        <TextView
				     android:id="@+id/main_row_1_title"
				     android:layout_width="300px"
				     android:layout_height="wrap_content"
				     android:layout_marginLeft="20px"
				     android:layout_marginTop="8px"
				     android:text="Deluxe 더블 "
				     android:textColor="#FF323232"
				     android:textSize="25px" 
				     android:singleLine = "true"
				     />
				
				    
				<TextView
				     android:id="@+id/main_row_1_nick"
				     android:layout_width="260px"
				     android:layout_height="wrap_content"
				     android:layout_marginLeft="20px"
				     android:layout_marginTop="35px"
				     android:gravity="left"
				     android:text=""
				     android:textColor="#222299"
				     android:textSize="20px" 
				     android:singleLine = "true"/>
				
				 <TextView
				     android:id="@+id/main_row_1_day"
				     android:layout_width="wrap_content"
				     android:layout_height="wrap_content"
				     android:layout_marginLeft="20px"
				     android:layout_marginTop="10px"
				     android:layout_marginRight="10px"
				     android:text=" 82,000 원"
				     android:textColor="#FF3333FF"
				     android:layout_gravity="right"
				     android:textSize="25px" 
				     android:singleLine = "true"
				     />
			</FrameLayout >
			
	
		<FrameLayout
			   	android:id="@+id/main_row_2"
			    android:layout_width="480px"
			    android:layout_height="100px"
			    android:background="@drawable/option_1_bg"
			    android:orientation="vertical">
			    
		       
		        <TextView
				     android:id="@+id/main_row_2_title"
				     android:layout_width="300px"
				     android:layout_height="wrap_content"
				     android:layout_marginLeft="20px"
				     android:layout_marginTop="8px"
				     android:text="Deluxe 더블 "
				     android:textColor="#FF323232"
				     android:textSize="25px" 
				     android:singleLine = "true"
				     />
				
				    
				<TextView
				     android:id="@+id/main_row_2_nick"
				     android:layout_width="260px"
				     android:layout_height="wrap_content"
				     android:layout_marginLeft="20px"
				     android:layout_marginTop="35px"
				     android:gravity="left"
				     android:text=""
				     android:textColor="#222299"
				     android:textSize="20px" 
				     android:singleLine = "true"/>
				
				 <TextView
				     android:id="@+id/main_row_2_day"
				     android:layout_width="wrap_content"
				     android:layout_height="wrap_content"
				     android:layout_marginLeft="20px"
				     android:layout_marginTop="10px"
				     android:layout_marginRight="10px"
				     android:text=" 82,000 원"
				     android:textColor="#FF3333FF"
				     android:layout_gravity="right"
				     android:textSize="25px" 
				     android:singleLine = "true"
				     />
				 <ImageView
			        android:id="@+id/main_row_2_pic2"
			        android:layout_width="480px"
			        android:layout_height="41px"
			        android:layout_marginLeft="0px"
			        android:layout_marginTop="63px"
			         android:background="@drawable/promo_bar" />
			    
			    <TextView
			        android:id="@+id/main_row_2_promo"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="90px"
			        android:layout_marginTop="78px"
			        android:text="프로모션 : 휘트니스센터 무료| 조식 무료 |석식 무료"
			        android:textColor="#FFBBBBBB"
			        android:textSize="15px" />
			</FrameLayout >
</LinearLayout >


