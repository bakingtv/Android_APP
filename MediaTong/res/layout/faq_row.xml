<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/faq_row" 
    android:orientation="vertical" android:background="#E2343B" >
	<LinearLayout
		 android:id="@+id/faq_row_2"
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content"
		 android:orientation="vertical"
		 android:layout_marginLeft="10px"
		 android:layout_marginTop="10px">
	     <TextView
	       	android:id="@+id/faq_row_title"
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	       	android:ellipsize="end"
	       	android:lines="1"
	       	android:maxLines="1"
	       	android:text="[안내] 공지사항 제목이 나옵니다. 공지사항 제목이 나옵니다. 공지사항 제목이 나옵니다."
	       	android:textColor="#FFFFFF"
	    	android:textSize="25px" />
	</LinearLayout >
	
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10px"
		android:background="@drawable/m_app_005_line"
		android:orientation="vertical" />
	
	
	<LinearLayout
		 android:id="@+id/faq_row_3"
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content"
		 android:orientation="vertical"
		 android:background="#FFFFFF" >

	     <TextView
	         android:id="@+id/faq_row_content"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginBottom="10px"
	         android:layout_marginLeft="10px"
	         android:layout_marginTop="10px"
	         android:ellipsize="end"
	         android:text="[안내] 공지사항 제목이 나옵니다. 공지사항 제목이 나옵니다. 공지사항 제목이 나옵니다."
	         android:textColor="#000000"
	         android:textSize="25px" />

	</LinearLayout >
</LinearLayout>