<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="#E2343B" >
    

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="725px"
	    android:orientation="vertical"
	    android:background="#E2343B"
	    android:id="@+id/recruit_main" >
	    
	    <FrameLayout 
	        android:id="@+id/recruit_head"
		    android:layout_width="match_parent"
		    android:layout_height="73px"
		    android:orientation="vertical"
		    android:background="@drawable/header_bg" >
		    
	        <ImageView
				android:id="@+id/recruit_back"
				android:layout_width="95px"
				android:layout_height="42px"			
				android:layout_marginLeft="12px"
	        	android:layout_marginTop="12px"
	        	android:layout_gravity="left"
				android:src="@drawable/m_app_004_header_btn01" />
	        
	         <TextView
			    android:id="@+id/textView1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="채용정보"
			    android:layout_gravity="center_horizontal"
			    android:layout_marginTop="12px"
		        android:textColor="#000000" android:textSize="24sp"/>
	        
	        <ImageView
				android:id="@+id/recruit_search"
				android:layout_width="106px"
				android:layout_height="42px"
				android:layout_marginLeft="358px"
	        	android:layout_marginTop="12px"
	        	android:layout_gravity="left"
				android:src="@drawable/m_app_005_btn" />
	    </FrameLayout>
	    
	    
	     <FrameLayout 
	        android:id="@+id/recruit_body"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:background="#E2343B">
	        
	        <ImageView
				android:id="@+id/recruit_broad"
				android:layout_width="358px"
				android:layout_height="53px"
				android:layout_marginLeft="63px"
	        	android:layout_marginTop="20px"
	        	android:layout_gravity="left"
				android:src="@drawable/m_app_006_btn01" />
	        <ImageView
				android:id="@+id/recruit_pro"
				android:layout_width="358px"
				android:layout_height="53px"
				android:layout_marginLeft="63px"
	        	android:layout_marginTop="80px"
	        	android:layout_gravity="left"
				android:src="@drawable/m_app_006_btn02" />
	        <ImageView
				android:id="@+id/recruit_paper"
				android:layout_width="358px"
				android:layout_height="53px"
				android:layout_marginLeft="63px"
	        	android:layout_marginTop="140px"
	        	android:layout_gravity="left"
				android:src="@drawable/m_app_006_btn03" />
	        <ImageView
				android:id="@+id/recruit_movie"
				android:layout_width="358px"
				android:layout_height="53px"
				android:layout_marginLeft="63px"
	        	android:layout_marginTop="200px"
	        	android:layout_gravity="left"
				android:src="@drawable/m_app_006_btn04" />
	        <ImageView
				android:id="@+id/recruit_ad"
				android:layout_width="358px"
				android:layout_height="53px"
				android:layout_marginLeft="63px"
	        	android:layout_marginTop="260px"
	        	android:layout_gravity="left"
				android:src="@drawable/m_app_006_btn05" />
	        <ImageView
				android:id="@+id/recruit_enter"
				android:layout_width="358px"
				android:layout_height="53px"
				android:layout_marginLeft="63px"
	        	android:layout_marginTop="320px"
	        	android:layout_gravity="left"
				android:src="@drawable/m_app_006_btn06" />
	        <ImageView
				android:id="@+id/recruit_create"
				android:layout_width="358px"
				android:layout_height="53px"
				android:layout_marginLeft="63px"
	        	android:layout_marginTop="380px"
	        	android:layout_gravity="left"
				android:src="@drawable/m_app_006_btn07" />
	        <ImageView
				android:id="@+id/recruit_it"
				android:layout_width="358px"
				android:layout_height="53px"
				android:layout_marginLeft="63px"
	        	android:layout_marginTop="440px"
	        	android:layout_gravity="left"
				android:src="@drawable/m_app_006_btn08" />
	        <ImageView
				android:id="@+id/recruit_game"
				android:layout_width="358px"
				android:layout_height="53px"
				android:layout_marginLeft="63px"
	        	android:layout_marginTop="500px"
	        	android:layout_gravity="left"
				android:src="@drawable/m_app_006_btn09" />
	        <ImageView
				android:id="@+id/recruit_edu"
				android:layout_width="358px"
				android:layout_height="53px"
				android:layout_marginLeft="63px"
	        	android:layout_marginTop="560px"
	        	android:layout_gravity="left"
				android:src="@drawable/m_app_006_btn10" />
	        
	     </FrameLayout>

    </LinearLayout>
 
    
    <LinearLayout
		android:id="@+id/recruit_bottom"
		android:layout_width="match_parent"
		android:layout_height="77px"
		android:orientation="vertical" 
		android:layout_gravity="bottom" 
		android:layout_weight="1" 
		android:layout_alignParentBottom="true"
		android:background="@drawable/foot_bg"   android:gravity="center">
		<LinearLayout
			android:id="@+id/today_layout_4"
			android:layout_width="480px"
			android:layout_height="77px"
			android:orientation="horizontal"   >
			<ImageView
					android:id="@+id/recruit_bottom_home"
					android:layout_width="120px"
					android:layout_height="77px"
					android:background="@drawable/foot_btn1"
					android:layout_gravity="left"/>
			<ImageView
					android:id="@+id/recruit_bottom_myjob"
					android:layout_width="120px"
					android:layout_height="77px"
					android:background="@drawable/foot_btn2"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/recruit_bottom_scrap"
					android:layout_width="120px"
					android:layout_height="77px"
					android:background="@drawable/foot_btn3"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/recruit_bottom_setting"
					android:layout_width="120px"
					android:layout_height="77px"
					android:background="@drawable/foot_btn4"
					android:layout_gravity="left"/>
		</LinearLayout>
 
	 </LinearLayout>

</RelativeLayout>