<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="#E2343B" >
    

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="800px"
	    android:orientation="vertical"
	    android:background="#E2343B"
	    android:id="@+id/scrap_main" >
	    
	    <FrameLayout 
	        android:id="@+id/scrap_head"
		    android:layout_width="match_parent"
		    android:layout_height="73px"
		    android:orientation="vertical"
		    android:background="@drawable/header_bg" >
		    
	        <ImageView
				android:id="@+id/scrap_back"
				android:layout_width="95px"
				android:layout_height="42px"			
				android:layout_marginLeft="12px"
	        	android:layout_marginTop="12px"
	        	android:layout_gravity="left"
				android:src="@drawable/m_app_004_header_btn01" />
	        
	         <TextView
			    android:id="@+id/textView1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="스크랩 삭제"
			    android:layout_gravity="center_horizontal"
			    android:layout_marginTop="12px"
		        android:textColor="#000000" android:textSize="24sp"/>
	         
	         

	        

	    </FrameLayout>
	    
	    
	     <FrameLayout 
	        android:id="@+id/scrap_body"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:orientation="vertical"
		    android:background="#E2343B">
	         

	        <LinearLayout
	            android:id="@+id/scrap_body1"
	            android:layout_width="match_parent"
	            android:layout_height="match_parent"
	            android:background="#E2343B"
	            android:orientation="vertical" 
				>
				
	            <ListView
				    android:id="@+id/scrap_detail_list_view"
				    android:layout_width="match_parent"
				    android:layout_height="652px" >
				</ListView>


				<LinearLayout
				    android:id="@+id/scrap_body1_1"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:layout_marginTop="15px"
				    android:background="#E2343B"
				    android:orientation="horizontal" >
					
				    <ImageView
				        android:id="@+id/scrap_delete"
				        android:layout_width="122px"
				        android:layout_height="42px"
				        android:layout_gravity="left"
				        android:layout_marginTop="35px"
				        android:layout_weight="1"
				        android:src="@drawable/m_app_025_btn" />
				    
				    <Spinner
				        android:id="@+id/scrap_detail_spinner1"
				        android:layout_width="120px"
				        android:layout_height="52px"
				        android:layout_gravity="right"
				        android:layout_marginTop="35px"
				        android:layout_weight="1" />
	 
				</LinearLayout>


			</LinearLayout>
	     </FrameLayout>
    </LinearLayout>
</RelativeLayout>