<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro"
    android:orientation="vertical" >

       <FrameLayout 
        android:id="@+id/main_screen"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	     >
         <FrameLayout 
	        android:id="@+id/title_bar"
		    android:layout_width="match_parent"
		    android:layout_height="66px"
		    android:orientation="vertical"
		    android:background="@drawable/title_bar_bg" >
		    
            <ImageView
                android:id="@+id/title_icon"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="31px"
                android:layout_marginTop="10px"
                android:background="@drawable/right_back_icon" />
            
            <TextView
		      	android:id="@+id/title_name"
		       	android:layout_width="match_parent"
		       	android:layout_height="wrap_content"
		       	android:layout_marginLeft="98px"
                android:layout_marginTop="10px"
		       	android:ellipsize="end"
		       	android:lines="1"
		       	android:maxLines="1"
		       	android:text="윙크하기 "
		       	android:textColor="#FFFFFF"
		    	android:textSize="15dip" />
            
            <TextView
		      	android:id="@+id/title_desc"
		       	android:layout_width="match_parent"
		       	android:layout_height="wrap_content"
		       	android:layout_marginLeft="99px"
                android:layout_marginTop="34px"
		       	android:ellipsize="end"
		       	android:lines="1"
		       	android:maxLines="1"
		       	android:text="Mapp 소통시스템"
		       	android:textColor="#FFFF00"
		    	android:textSize="15dip" />
            
            <ImageView
                android:id="@+id/title_popup"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="410px"
                android:layout_marginTop="10px"
                android:background="@drawable/right_check_icon" />

	    </FrameLayout>
	    
         
         <FrameLayout 
	        android:id="@+id/main_layout"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"    
		    android:layout_marginTop="68px"
		    android:orientation="vertical"
		    android:background="#FFFFFF" >
            
             <TextView
		      	android:id="@+id/mailing_text"
		       	android:layout_width="match_parent"
		       	android:layout_height="60px"
		       	android:layout_marginLeft="20px"
		       	android:layout_marginRight="10px"
                android:layout_marginTop="20px"
		       	android:ellipsize="end"

		       	android:maxLines="3"
		       	android:text="윙크는 작곡자와 보컬 혹은 연주자와의 소통시스템입니다.\n 메일을 통해 자신의 곡을 주거나 함께 작품을 만들수 있습니다."
		       	android:textColor="#000000"
		    	android:textSize="10dip" />
             <ImageView
	                android:id="@+id/mailing_line"
	                android:layout_width="440px"
	                android:layout_height="2px"
	                android:layout_gravity="left"
	                android:layout_marginLeft="20px"
	                android:layout_marginTop="60px"
	                android:background="@drawable/yellow_bar" />

             	<EditText
	                 android:id="@+id/mailing_name"
	                 android:layout_width="440px"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="20px"
	                 android:layout_marginTop="80px"
	                 android:background="@null"
	                 android:textColor="#000000"
	                 android:hint="이름"
	                 android:textCursorDrawable="@null"
	                 android:textSize="30px" />
			    
	             <ImageView
	                android:id="@+id/mailing_name_line"
	                android:layout_width="440px"
	                android:layout_height="2px"
	                android:layout_gravity="left"
	                android:layout_marginLeft="20px"
	                android:layout_marginTop="115px"
	                android:background="@drawable/yellow_bar" />
	             
	             <EditText
	                 android:id="@+id/mailing_tel"
	                 android:layout_width="440px"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="20px"
	                 android:layout_marginTop="160px"
	                 android:background="@null"
	                 android:textColor="#000000"
	                 android:hint="연락처"
	                 android:textCursorDrawable="@null"
	                 android:textSize="30px" />
			    
	             <ImageView
	                android:id="@+id/mailing_tel_line"
	                android:layout_width="440px"
	                android:layout_height="2px"
	                android:layout_gravity="left"
	                android:layout_marginLeft="20px"
	                android:layout_marginTop="195px"
	                android:background="@drawable/yellow_bar" />
	             
	             
	             <TextView
	                 android:id="@+id/mailing_music"
	                 android:layout_width="440px"
	                 android:layout_height="wrap_content"
	                 android:layout_marginLeft="20px"
	                 android:layout_marginTop="240px"
	                 android:background="@null"
	                 android:textColor="#000000"
	                 android:hint="이메일"
	                 android:textCursorDrawable="@null"
	                 android:textSize="30px" />
			    
	             <ImageView
	                android:id="@+id/mailing_music_line"
	                android:layout_width="440px"
	                android:layout_height="2px"
	                android:layout_gravity="left"
	                android:layout_marginLeft="20px"
	                android:layout_marginTop="275px"
	                android:background="@drawable/yellow_bar" />
	             
	             
	             <EditText
	                 android:id="@+id/mailing_desc"
	                 android:layout_width="440px"
	                 android:layout_height="match_parent"
	                 android:layout_marginLeft="20px"
	                 android:layout_marginTop="320px"
	                 android:background="@null"
	                 android:textColor="#000000"
	                 android:hint="같이 하고 싶은 이유"
	                 android:textCursorDrawable="@null"
	                 android:gravity="left" 
	                 android:inputType="textMultiLine"
	                 android:textSize="30px" />
           

	    </FrameLayout>
        
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

		<LinearLayout
		    android:id="@+id/bottom_menu_1"
		    android:layout_width="480px"
		    android:layout_height="74px"
		    android:orientation="horizontal"
		    android:visibility="gone" >

			<ImageView
					android:id="@+id/bottom_1"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/home_k_icon"
					android:layout_gravity="left"/>
			<ImageView
					android:id="@+id/bottom_2"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/audition_k_icon"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_3"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/album_k_icon"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_4"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/squre_k_icon"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_5"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/more_k_icon"
					android:layout_gravity="left"/>
		</LinearLayout>
		
		<LinearLayout
		    android:id="@+id/bottom_menu_2"
		    android:layout_width="480px"
		    android:layout_height="74px"
		    android:orientation="horizontal"
		    android:visibility="gone" >

			<ImageView
					android:id="@+id/bottom_6"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/search_k_icon"
					android:layout_gravity="left"/>
			<ImageView
					android:id="@+id/bottom_7"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/mypagehome_k_icon"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_8"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/favoriteshome_k_icon"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_9"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/settingshome_k_icon"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_10"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/logohome_icon"
					android:layout_gravity="left"/>
		</LinearLayout>
	 </LinearLayout>
	 
</RelativeLayout>