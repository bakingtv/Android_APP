<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    
    
		    

    <FrameLayout 
        android:id="@+id/main_screen"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	     >
		    
         <FrameLayout 
	        android:id="@+id/title_bar"
		    android:layout_width="match_parent"
		    android:layout_height="66px"
		    android:orientation="vertical"
		    android:background="@drawable/title_bar_bg" >
		    
            <ImageView
                android:id="@+id/title_icon"
                android:layout_width="45px"
                android:layout_height="45px"
                android:layout_gravity="left"
                android:layout_marginLeft="31px"
                android:layout_marginTop="10px"
                android:background="@drawable/right_back_icon" />

            
            <TextView
		      	android:id="@+id/title_name"
		       	android:layout_width="wrap_content"
		       	android:layout_height="wrap_content"
		       	android:layout_marginLeft="98px"
		       	android:layout_marginRight="10px"
                android:layout_marginTop="15px"
		       	android:ellipsize="end"
		       	android:lines="1"
		       	android:maxLines="1"
		       	android:text="로그인"
		       	android:textColor="#FFFFFF"
		    	android:textSize="25dip" />
            
             <TextView
		      	android:id="@+id/title_desc"
		       	android:layout_width="wrap_content"
		       	android:layout_height="wrap_content"
		       	android:layout_marginLeft="98px"
		       	android:layout_marginRight="10px"
                android:layout_marginTop="10px"
		       	android:ellipsize="end"
		       	android:lines="1"
		       	android:maxLines="1"
		       	android:text=""
		       	android:textColor="#FFFFFF"
		    	android:textSize="0dip" />

	    </FrameLayout>
	    
         
         <FrameLayout 
	        android:id="@+id/main_layout"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"    
		    android:layout_marginTop="68px"
		    android:orientation="vertical"
		    android:background="@drawable/bg" >
             
             <ImageView
                android:id="@+id/login_input_image"
                android:layout_width="417px"
                android:layout_height="129px"
                android:layout_gravity="left"
                android:layout_marginLeft="32px"
                android:layout_marginTop="13px"
                android:background="@drawable/settings_login_area" />

             <EditText
                 android:id="@+id/login_id_data"
                 android:layout_width="380px"
                 android:layout_height="wrap_content"
                 android:layout_marginLeft="49px"
                 android:layout_marginTop="38px"
                 android:background="@null"
                 android:textColor="#000000"
                 android:hint="이메일"
                 android:textCursorDrawable="@null"
                 android:textSize="12dip" />
             
              <EditText
                  android:id="@+id/login_pass_data"
                  android:layout_width="380px"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="49px"
                  android:layout_marginTop="98px"
                  android:background="@null"
                  android:hint="비밀번호"
                  android:inputType="textPassword"
                  android:textColor="#000000"
                  android:textCursorDrawable="@null"
                  android:textSize="12dip" />
             
             <TextView
		      	android:id="@+id/login_lost_pass"
		       	android:layout_width="wrap_content"
		       	android:layout_height="wrap_content"
		       	android:layout_marginLeft="50px"
		       	android:layout_marginRight="10px"
                android:layout_marginTop="153px"
		       	android:ellipsize="end"
		       	android:lines="1"
		       	android:maxLines="1"
		       	android:text="비밀번호를 잊으셨습니까?"
		       	android:textColor="#FFFFFF"
		    	android:textSize="12dip" />
             
             <ImageView
                android:id="@+id/login_btn"
                android:layout_width="116px"
                android:layout_height="44px"
                android:layout_gravity="left"
                android:layout_marginLeft="326px"
                android:layout_marginTop="153px"
                android:background="@drawable/login_bt" />
             
             
             <ImageView
                android:id="@+id/login_join_btn"
                android:layout_width="419px"
                android:layout_height="59px"
                android:layout_gravity="left"
                android:layout_marginLeft="31px"
                android:layout_marginTop="475px"
                android:background="@drawable/entry" />
			

	    </FrameLayout>
        
    </FrameLayout>

    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical" >

		<LinearLayout
			android:id="@+id/bottom_menu_1"
			android:layout_width="480px"
			android:layout_height="74px"
			android:orientation="horizontal"   >
			<ImageView
					android:id="@+id/bottom_1"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/home_k_icon"
					android:layout_gravity="left"/>
			<ImageView
					android:id="@+id/bottom_2"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/audition_k_icon"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_3"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/album_k_icon"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_4"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/squre_k_icon"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_5"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/more_k_icon"
					android:layout_gravity="left"/>
		</LinearLayout>
		
		<LinearLayout
			android:id="@+id/bottom_menu_2"
			android:layout_width="480px"
			android:layout_height="74px"
			android:orientation="horizontal"   >
			<ImageView
					android:id="@+id/bottom_6"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/search_k_icon"
					android:layout_gravity="left"/>
			<ImageView
					android:id="@+id/bottom_7"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/mypagehome_k_icon"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_8"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/favoriteshome_k_icon"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_9"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/settingshome_k_icon"
					android:layout_gravity="left"/>
			
			<ImageView
					android:id="@+id/bottom_10"
					android:layout_width="96px"
					android:layout_height="74px"
					android:background="@drawable/logohome_icon"
					android:layout_gravity="left"/>
		</LinearLayout>
	 </LinearLayout>
</RelativeLayout>