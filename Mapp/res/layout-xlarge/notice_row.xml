<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/notice_row" 
    android:orientation="vertical" android:background="#FFFFFF" >
    
    

    <LinearLayout
		 android:id="@+id/notice_row_main"
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content"
		 android:orientation="vertical"
		 >
		 
		<LinearLayout
			 android:id="@+id/notice_row_2"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:orientation="vertical"
			 android:layout_marginLeft="10px"
			 android:layout_marginTop="10px">
		     <TextView
		       	android:id="@+id/notice_row_title"
		       	android:layout_width="match_parent"
		       	android:layout_height="wrap_content"
		       	android:ellipsize="end"
		       	android:lines="1"
		       	android:maxLines="1"
		       	android:text="[안내] 공지사항 제목이 나옵니다. 공지사항 제목이 나옵니다. 공지사항 제목이 나옵니다."
		       	android:textColor="#000000"
		    	android:textSize="15dip" />
		</LinearLayout >
	
		<LinearLayout
		    android:id="@+id/notice_row_3"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_gravity="right"
		    android:layout_marginBottom="10px"
		    android:layout_marginRight="10px"
		    android:orientation="vertical"
		    android:layout_marginTop="10px" >
	
		     <TextView
		       	android:id="@+id/notice_row_desc"
		       	android:layout_width="match_parent"
		       	android:layout_height="wrap_content"
		       	android:ellipsize="end"
		       	android:lines="1"
		       	android:maxLines="1"
		       	android:text="2012-05-12"
		       	android:textColor="#000000"
		    	android:textSize="12dip" />
		</LinearLayout >
	</LinearLayout >
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10px"
		android:orientation="vertical" />
	
	
	<LinearLayout
		 android:id="@+id/notice_row1"
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content"
		 android:orientation="vertical"
		 android:background="#FFFFFF" >

	     <ImageView
                android:id="@+id/notice_row_content_line"
                android:layout_width="match_parent"
                android:layout_height="0.69dip"
                android:layout_gravity="left"
                android:background="@drawable/line" />
	                 

	     <TextView
	         android:id="@+id/notice_row_content"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginBottom="10px"
	         android:layout_marginLeft="10px"
	         android:layout_marginTop="10px"
	         android:layout_marginRight="10px"
	         android:ellipsize="end"
	         android:text="[안내] 공지사항 제목이 나옵니다. 공지사항 제목이 나옵니다. 공지사항 제목이 나옵니다."
	         android:textColor="#000000"
	         android:textSize="15dip" />

	</LinearLayout >
	
</LinearLayout>