<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF5F5F5" 
    android:orientation="vertical"
    android:layout_weight="1"
    android:gravity="center">
    
    <FrameLayout
	   	android:id="@+id/main_row_1"
	    android:layout_width="480px"
	    android:layout_height="92px"
	    android:background="@drawable/list_1_bar"
	    android:orientation="vertical">
	    
       
        <TextView
		     android:id="@+id/main_row_1_title"
		     android:layout_width="360px"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="12px"
		     android:layout_marginTop="16px"
		     android:text="르네상스 호텔"
		     android:textColor="#FF323232"
		     android:textSize="25px" 
		     android:singleLine = "true"
		     />
		
		    
		    <TextView
		        android:id="@+id/main_row_1_day"
		        android:layout_width="260px"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="20px"
		        android:layout_marginTop="60px"
		        android:gravity="left"
		        android:text="2012-09-15 23:33"
		        android:textColor="#999999"
		        android:textSize="20px" 
		        android:singleLine = "true"/>
		    
		   <ImageView
		        android:id="@+id/main_row_1_pic"
		        android:layout_width="88px"
		        android:layout_height="42px"
		        android:layout_marginLeft="384px"
		        android:layout_marginTop="24px"
		        android:background="@drawable/reservation1_1"/>

		    
	</FrameLayout >
	
     <FrameLayout
	   	android:id="@+id/main_row_2"
	    android:layout_width="480px"
	    android:layout_height="149px"
	    android:background="@drawable/zzim_text"
	    android:orientation="vertical">
	    

		    
	</FrameLayout >
	
 
	
</LinearLayout >


