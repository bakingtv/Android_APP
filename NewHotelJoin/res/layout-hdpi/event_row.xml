<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF5F5F5" 
    android:orientation="vertical"
    android:layout_weight="1"
    android:gravity="center">
    
    <FrameLayout
	   	android:id="@+id/main_row_1"
	    android:layout_width="480px"
	    android:layout_height="116px"
	    android:background="@drawable/event_list_1_bar"
	    android:orientation="vertical">
	    
       
        <TextView
		     android:id="@+id/main_row_1_title"
		     android:layout_width="260px"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="172px"
		     android:layout_marginTop="8px"
		     android:text="유럽의 크리스마스와 함께하는 100% 선물증정이벤트"
		     android:textColor="#FF323232"
		     android:textSize="20px" />
		
	    
	    	 <ImageView
		        android:id="@+id/main_row_1_pic"
		        android:layout_width="138px"
		        android:layout_height="104px"
		        android:layout_marginLeft="7px"
		        android:layout_marginTop="4px"/>
		    
		    <TextView
		        android:id="@+id/main_row_1_day"
		        android:layout_width="260px"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="172px"
		        android:layout_marginTop="78px"
		        android:gravity="left"
		        android:text="2012-09-15 ~ 2012-09-15"
		        android:textColor="#FF3232FF"
		        android:textSize="20px" />

		    
	</FrameLayout >
	
 
	
</LinearLayout >


