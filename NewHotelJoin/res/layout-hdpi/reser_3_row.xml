<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1"
    android:gravity="center"
    >
    
	<FrameLayout
	    android:id="@+id/main_row_1"
	    android:layout_width="480px"
	    android:layout_height="329px"
	    android:background="@drawable/reser_bg_1"
	    android:orientation="vertical"
	    android:visibility="gone" 
	    >
		
	   	<ImageView
	   	    android:id="@+id/main_row_1_pic"
	   	    android:layout_width="480px"
	   	    android:layout_height="246px"
	   	    android:layout_gravity="left"
	   	    android:layout_marginLeft="0px"
	   	    android:layout_marginTop="0px"
	   	    
	   	    android:visibility="visible" />
	   	

	   	  <TextView
		     android:id="@+id/main_row_1_price"
		     android:layout_width="wrap_content"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="20px"
		     android:layout_marginTop="255px"
		     android:layout_marginRight="10px"
		     android:text=" 82,000 원"
		     android:textColor="#FF3333FF"
		     android:layout_gravity="right"
		     android:textSize="25px" 
		     android:singleLine = "true"
		     />
	   	  
	   	  	<TextView
			     android:id="@+id/roomname"
			                 android:layout_width="320px"
			                 android:layout_height="wrap_content"
			                 android:layout_marginLeft="30px"
			               	 android:layout_marginTop="10px"
			                 android:background="@null"
			                 android:text="방 번호!!"
			                 android:textColor="#000000"
			                 android:textCursorDrawable="@null"
			                 android:textSize="20px" />
				       

	</FrameLayout >
	
	<LinearLayout
	    android:id="@+id/main_row_2"
	    android:layout_width="480px"
	    android:layout_height="143px"
	    android:background="@drawable/hotel_re_2"
	    android:orientation="vertical"
	    android:visibility="gone" >

	    <ImageView
                android:id="@+id/main_row_2_pic"
                android:layout_width="450px"
                android:layout_height="68px"
                android:layout_gravity="left"
                android:layout_marginLeft="15px"
                android:layout_marginTop="10px"
                android:background="@drawable/login_btn" />
	</LinearLayout >
	
	<FrameLayout
	    android:id="@+id/main_row_3"
	    android:layout_width="480px"
	    android:layout_height="803px"
	    android:background="@drawable/reser_bg_3"
	    android:orientation="vertical"
	    >
	    
	    <EditText
			android:id="@+id/name1"
			android:layout_width="300px"
			android:layout_height="wrap_content"
			android:layout_marginLeft="135px"
			android:layout_marginTop="25px"
			android:background="@null"
			android:textColor="#000000"
			android:hint="이름"
			android:textCursorDrawable="@null"
			android:textSize="20px" 
			android:singleLine = "true"/>

	    <EditText
			android:id="@+id/tel1"
		 	android:layout_width="340px"
			android:layout_height="wrap_content"
			android:layout_marginLeft="135px"
			android:layout_marginTop="95px"
			android:background="@null"
			android:textColor="#000000"
			android:hint="연락처"
			android:textCursorDrawable="@null"
			android:textSize="20px" 
			android:singleLine = "true"/>
	     <EditText
			android:id="@+id/tel2"
			android:layout_width="340px"
			android:layout_height="wrap_content"
			android:layout_marginLeft="135px"
			android:layout_marginTop="165px"
			android:background="@null"
			android:textColor="#000000"
			android:hint="핸드폰"
			android:textCursorDrawable="@null"
			android:textSize="20px" 
			android:singleLine = "true"/>
	    <EditText
			android:id="@+id/mail"
			android:layout_width="340px"
			android:layout_height="wrap_content"
			android:layout_marginLeft="135px"
			android:layout_marginTop="225px"
			android:background="@null"
			android:textColor="#000000"
			android:hint="이메일"
			android:textCursorDrawable="@null"
			android:textSize="20px"
			android:singleLine = "true" />
	    <EditText
			android:id="@+id/write_text"
			android:layout_width="340px"
			android:layout_height="122px"
			android:layout_marginLeft="130px"
			android:layout_marginTop="285px"
			android:background="@null"
			android:textColor="#000000"
			android:hint="전달사항"
			android:textCursorDrawable="@null"
			android:gravity="left" 
			android:inputType="textMultiLine"
			android:textSize="20px" />
		<EditText
			android:id="@+id/name1_6"
			android:layout_width="300px"
			android:layout_height="wrap_content"
			android:layout_marginLeft="130px"
			android:layout_marginTop="450px"
			android:background="@null"
			android:textColor="#000000"
			android:hint="이름"
			android:textCursorDrawable="@null"
			android:textSize="20px" 
			android:singleLine = "true"/>
				       
				       
		<ImageView
			android:id="@+id/checkbox_1"
			android:layout_width="40px"
			android:layout_height="40px"
			android:layout_gravity="left"
			android:layout_marginLeft="120px"
			android:layout_marginTop="495px"
			android:background="@drawable/checkbox_1" />
		<ImageView
			android:id="@+id/checkbox_2"
			android:layout_width="40px"
			android:layout_height="40px"
			android:layout_gravity="left"
			android:layout_marginLeft="37px"
			android:layout_marginTop="550px"
			android:background="@drawable/checkbox_1" />
		<ImageView
			android:id="@+id/checkbox_3"
			android:layout_width="40px"
			android:layout_height="40px"
			android:layout_gravity="left"
			android:layout_marginLeft="37px"
			android:layout_marginTop="605px"
			android:background="@drawable/checkbox_1" />
		<ImageView
			android:id="@+id/detail_btn_2"
			android:layout_width="114px"
			android:layout_height="33px"
			android:layout_gravity="left"
			android:layout_marginLeft="353px"
			android:layout_marginTop="555px"
			android:background="@drawable/detail_bt_1" />
		<ImageView
			android:id="@+id/detail_btn_3"
			android:layout_width="114px"
			android:layout_height="33px"
			android:layout_gravity="left"
			android:layout_marginLeft="353px"
			android:layout_marginTop="610px"
			android:background="@drawable/detail_bt_1" />
		<ImageView
			android:id="@+id/main_row_7_pic"
			android:layout_width="450px"
			android:layout_height="68px"
			android:layout_marginTop="680px"
		    android:layout_marginLeft="15px"
			android:background="@drawable/reservation_entry1" />
	</FrameLayout >
</LinearLayout >


