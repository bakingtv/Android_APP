<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF5F5F5" 
    android:orientation="vertical"
    android:layout_weight="1"
    android:gravity="center">
	
    <FrameLayout
	   	android:id="@+id/main_row_4"
	    android:layout_width="480px"
	    android:layout_height="193px"
	    android:orientation="vertical">
	    
        <ImageView
		        android:id="@+id/main_row_4_back"
		        android:layout_width="480px"
	    		android:layout_height="152px"
	    		android:background="@drawable/search_list_bar"/>
       
        <TextView
		     android:id="@+id/main_row_4_title"
		     android:layout_width="match_parent"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="20px"
		     android:layout_marginTop="8px"
		     android:text="테스트1111"
		     android:textColor="#FF323232"
		     android:textSize="25px" 
		     android:singleLine = "true"/>
		
	    
	    	 <ImageView
		        android:id="@+id/main_row_4_pic"
		        android:layout_width="138px"
		        android:layout_height="104px"
		        android:layout_marginLeft="7px"
		        android:layout_marginTop="42px"/>
	    	 
	    	 <ImageView
		        android:id="@+id/main_row_4_pic_2"
		        android:layout_width="138px"
		        android:layout_height="104px"
		        android:layout_marginLeft="7px"
		        android:layout_marginTop="42px"
		        android:background="@drawable/hotellist_best"/>
	    	 

		    <ImageView
		        android:id="@+id/main_row_4_class"
		        android:layout_width="100px"
		        android:layout_height="19px"
		        android:layout_marginLeft="160px"
		        android:layout_marginTop="42px"
		        android:background="@drawable/star5"
		        />

		    <ImageView
		        android:id="@+id/main_row_4_reser"
		        android:layout_width="90px"
		        android:layout_height="32px"
		        android:layout_marginLeft="385px"
		        android:layout_marginTop="42px"
		        android:background="@drawable/step1" />
		    
		    <TextView
		        android:id="@+id/main_row_4_distance"
		        android:layout_width="180px"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="160px"
		        android:layout_marginTop="94px"
		        android:text="내 위치에서 약 5.0km "
		        android:textColor="#FF888888"
		        android:textSize="15px" />
		    
		    <TextView
		        android:id="@+id/main_row_4_price"
		        android:layout_width="170px"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="307px"
		        android:layout_marginTop="87px"
		        android:gravity="right"
		        android:text="￦82,000원"
		        android:textColor="#FF3232FF"
		        android:textSize="25px" />
		   
		    <ImageView
		        android:id="@+id/main_row_4_pic2"
		        android:layout_width="480px"
		        android:layout_height="41px"
		        android:layout_marginLeft="0px"
		        android:layout_marginTop="142px"
		         android:background="@drawable/promo_bar" />
		    
		    <TextView
		        android:id="@+id/main_row_4_promo"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="90px"
		        android:layout_marginTop="155px"
		        android:text="프로모션 : 휘트니스센터 무료| 조식 무료 |석식 무료"
		        android:textColor="#FFBBBBBB"
		        android:textSize="15px" />
		    
	</FrameLayout >
	
</LinearLayout >


