<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <FrameLayout
	   	android:id="@+id/main_row_1"
	    android:layout_width="480px"
	    android:layout_height="59px"
	    android:background="@drawable/re_listbar_1"
	    android:orientation="vertical">
	    
        <ImageView
		     android:id="@+id/main_row_1_bar"
		     android:layout_width="330px"
		     android:layout_height="47px"
		     android:layout_marginLeft="17px"
		     android:layout_marginTop="6px"
		     android:background="@drawable/title_1_bar"
		     />
       
        <TextView
		     android:id="@+id/main_row_1_title"
		     android:layout_width="310px"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="25px"
		     android:layout_marginTop="15px"
		     android:text="내생의 최고의 선물"
		     android:textColor="#FF323232"
		     android:textSize="25px" 
		     android:singleLine = "true"
		     android:ellipsize="end"
		     android:lines="1"
		     android:maxLines="1"
		     />
		

		<ImageView
		     android:id="@+id/main_row_1_class"
		     android:layout_width="100px"
		     android:layout_height="32px"
		     android:layout_marginLeft="370px"
		     android:layout_marginTop="15px"
		     android:background="@drawable/state_3"
		     />
		<TextView
		     android:id="@+id/main_row_1_sub"
		     android:layout_width="80px"
		     android:layout_height="wrap_content"
		     android:layout_marginLeft="390px"
		     android:layout_marginTop="20px"
		     android:text="결제완료"
		     android:textColor="#FF323232"
		     android:textSize="20px" 
		     android:singleLine = "true"
		     android:ellipsize="end"
		     android:lines="1"
		     android:maxLines="1"
		     />


		    
	</FrameLayout >
	
</LinearLayout>
