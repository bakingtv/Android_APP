<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/pattern_1"  >
    

    <FrameLayout 
        android:id="@+id/main_screen"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	     >
	     
        <TextView
			android:id="@+id/title_text"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textSize="38px" 
			android:textColor="#FF000000"
			android:text="회원가입"
			android:layout_marginTop="10px"
			android:gravity="center_horizontal"/>
    	<ImageView
			android:id="@+id/title_line"
			android:layout_width="480px"
			android:layout_height="5px"
			android:background="@drawable/title_bar"
			android:layout_marginTop="68px"
			android:layout_gravity="left"/>
    	
    	<ImageView
			android:id="@+id/title_menu"
			android:layout_width="53px"
			android:layout_height="49px"
			android:layout_marginLeft="417px"
			android:layout_marginTop="10px"
			android:background="@drawable/menu_1"
			android:layout_gravity="left"/>
    	
	     
         <FrameLayout 
	        android:id="@+id/main_layout"
		    android:layout_width="match_parent"
		    android:layout_height="800px"   
		     android:layout_marginTop="73px" 
		    android:orientation="vertical"
		     android:background="@drawable/common_bg"
		     android:focusable="true"
		     android:focusableInTouchMode="true"
		    >
	
		<WebView
			     android:id="@+id/pay_web"
			     android:layout_width="match_parent"
			     android:layout_height="727px"
			     android:background="#FFFFFF"
			      />


	    </FrameLayout>
    </FrameLayout>


</RelativeLayout>