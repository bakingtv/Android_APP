<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="#FFF5F5F5">
    <!-- 상단바 -->
    
    <FrameLayout
        android:id="@+id/shop_main_layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
         <!-- 상단바 -->
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="480px"
	        android:layout_height="66px"
	        android:src="@drawable/main_title_bar" />
	    
	   <ImageView
	             android:id="@+id/imageView2"
	             android:layout_width="150px"
	             android:layout_height="60px"
	             android:src="@drawable/shop_info_find_titile" android:layout_gravity="center_horizontal"/>
	
	   <TextView
	       android:id="@+id/textView1"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:text="업소명"
	       android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="left" android:layout_marginLeft="26px" android:layout_marginTop="100px"/>
	
	   <EditText
	       android:id="@+id/shop_find_name"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_gravity="left"
	       android:layout_marginLeft="150px"
	       android:layout_marginTop="70px" >
	   </EditText>
	   <SeekBar
	       android:id="@+id/shop_find_distance"
	       android:layout_width="272dp"
	       android:layout_height="wrap_content" 
	       android:layout_gravity="left" 
	       android:layout_marginLeft="26px" 
	       android:layout_marginTop="362px" 
	       android:max="10000"/>
	   <TextView
	       android:id="@+id/TextView01"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="26px"
	       android:layout_marginTop="160px"
	       android:text="업종별"
	       android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="left" android:visibility="gone"/>
	   <Spinner
	       android:id="@+id/shop_finder_shoptype"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_gravity="left"
	       android:layout_marginLeft="150px"
	       android:layout_marginTop="145px" android:visibility="gone"/>
	   
	   <TextView
	       android:id="@+id/TextView01"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="26px"
	       android:layout_marginTop="170px"
	       android:text="세부"
	       android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="left"/>
	
	   <Spinner
	       android:id="@+id/shop_finder_detail"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_gravity="left"
	       android:layout_marginLeft="150px"
	       android:layout_marginTop="145px" />
	   
	
	   <TextView
	       android:id="@+id/TextView02"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="26px"
	       android:layout_marginTop="235px"
	       android:text="검색지역"
	       android:textAppearance="?android:attr/textAppearanceLarge" android:layout_gravity="left"/>
	
	
	   <Spinner
	       android:id="@+id/shop_find_location"
	       android:layout_width="match_parent"
	       android:layout_height="wrap_content"
	       android:layout_gravity="left"
	       android:layout_marginLeft="150px"
	       android:layout_marginTop="215px" />
	
	   <ImageView
	       android:id="@+id/imageView3"
	       android:layout_width="78px"
	       android:layout_height="78px"
	       android:src="@drawable/shop_find_marker" android:layout_gravity="left" android:layout_marginLeft="205px" android:layout_marginTop="410px"/>
	
	   <Button
	       android:id="@+id/shop_find_findbtn"
	       android:layout_width="186px"
	       android:layout_height="57px"
	       android:layout_gravity="left" android:layout_marginLeft="148px" android:layout_marginTop="527px" android:background="@drawable/shop_find_find_btn"/>
	
	   <TextView
	       android:id="@+id/shop_finder_distance"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="210px"
	       android:layout_marginTop="435px"
	       android:text="0.0km"
	       android:textSize="22px"
	       android:layout_gravity="left"/>
    </FrameLayout>
    <LinearLayout
		android:id="@+id/shop_main_layout_2"
		android:layout_width="480px"
		android:layout_height="74px"
		android:background="@drawable/tab_n1"
		android:orientation="vertical" 
		android:layout_gravity="bottom" 
		android:layout_weight="1" 
		android:layout_alignParentBottom="true"  >
        <LinearLayout
			android:id="@+id/shop_main_layout_4"
			android:layout_width="480px"
			android:layout_height="74px"
			android:orientation="horizontal"   >
			<Button
				android:id="@+id/shop_main_tab_btn_11"
				android:layout_width="96px"
				android:layout_height="74px"
				android:background="@drawable/tab_n2_xml"
				android:layout_gravity="left"/>
			<ImageView
				android:id="@+id/shop_main_tab_btn_21"
				android:layout_width="96px"
				android:layout_height="74px"
				android:background="@drawable/tab_02_on"
				android:layout_gravity="left"/>
			
			<Button
				android:id="@+id/shop_main_tab_btn_31"
				android:layout_width="96px"
				android:layout_height="74px"
				android:background="@drawable/tab_n4_xml"
				android:layout_gravity="left"/>
					
			<Button
				android:id="@+id/shop_main_tab_btn_41"
				android:layout_width="96px"
				android:layout_height="74px"
				android:background="@drawable/tab_n5_xml"
				android:layout_gravity="left"/>
					
			<Button
				android:id="@+id/shop_main_tab_btn_51"
				android:layout_width="96px"
				android:layout_height="74px"
				android:background="@drawable/tab_n6_xml"
				android:layout_gravity="left"/>
            
        </LinearLayout>
        
        

	 </LinearLayout>

    

</RelativeLayout>

