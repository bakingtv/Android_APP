	        android:textColor="#FF323232"
	        android:textSize="18px" />
	
	    <TextView
	        android:id="@+id/shop_detail_main_addr"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:layout_marginLeft="230px"
	        android:layout_marginTop="170px"
	        android:text="서울시 강남구 논현동 \n 가로수 2길 동화빌딩 지하1층"
	        android:textColor="#FF323232"
	        android:textSize="18px" android:lines="2" android:ellipsize="end"/>
	
	
	    <TextView
	        android:id="@+id/shop_detail_main_score"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:layout_marginLeft="10px"
	        android:layout_marginTop="220px"
	        android:layout_weight="1"
	        android:text="평점 :"
	        android:textColor="#FF323232"
	        android:textSize="25px" />
	    <ImageView
	        android:id="@+id/shop_detail_main_score1"
	        android:layout_gravity="left"
	        android:layout_width="21px"
	        android:layout_height="21px"
	        android:src="@drawable/n1" 
	        android:layout_marginLeft="80px"
	        android:layout_marginTop="227px"/>
	   <ImageView
	        android:id="@+id/shop_detail_main_score2"
	        android:layout_gravity="left"
	        android:layout_width="21px"
	        android:layout_height="21px"
	        android:src="@drawable/n1" 
	        android:layout_marginLeft="110px"
	        android:layout_marginTop="227px"/>
	    
	   <ImageView
	        android:id="@+id/shop_detail_main_score3"
	        android:layout_gravity="left"
	        android:layout_width="21px"
	        android:layout_height="21px"
	        android:src="@drawable/n1" 
	        android:layout_marginLeft="140px"
	        android:layout_marginTop="227px"/>
	        
	   <ImageView
	        android:id="@+id/shop_detail_main_score4"
	        android:layout_gravity="left"
	        android:layout_width="21px"
	        android:layout_height="21px"
	        android:src="@drawable/n1" 
	        android:layout_marginLeft="170px"
	        android:layout_marginTop="227px"/>
	   
	   <ImageView
	        android:id="@+id/shop_detail_main_score5"
