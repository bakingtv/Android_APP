	        android:layout_marginTop="227px"/>
	   
	  <TextView
	        android:id="@+id/shop_detail_main_zzimcounter"
	        android:layout_gravity="left"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="230px"
	        android:layout_marginTop="227px"
	        android:text="(11)"
	        android:textColor="#FFF53232"
	        android:textSize="15px"/>
	   
	   <TextView
	        android:id="@+id/shop_detail_main_distance"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="right"
	        android:layout_marginRight="10px"
	        android:layout_marginTop="227px"
	        android:text="거리 : 49km"
	        android:textColor="#FF323232"
	        android:textSize="18px" />
	   
	           
	   <Button
             android:id="@+id/shop_detail_call_btn"
             android:layout_width="69px"
             android:layout_height="33px"
             android:layout_gravity="right" android:layout_marginRight="5px" android:layout_marginTop="75px" android:background="@drawable/shop_detail_call_btn"/>
  
         <Button
	        android:id="@+id/shop_detail_title_bar_zzim"
	        android:layout_width="90px"
	        android:layout_height="30px"
	        android:layout_marginLeft="375px"
	        android:layout_marginTop="15px"
	        android:background="@drawable/common_zzim_btn" android:layout_gravity="left"/>
    </FrameLayout>
    <LinearLayout
	        android:id="@+id/shop_main_tab"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_marginTop="270px">
		    <ImageButton
		        android:id="@+id/shop_detail_tab_btn_1"
		        android:layout_width="120px"
		        android:layout_height="48px"
		        android:background="@drawable/n_2_23on" android:layout_gravity="left"/>
		    <ImageButton
		        android:id="@+id/shop_detail_tab_btn_2"
		        android:layout_width="118px"
		        android:layout_height="48px"
		        android:background="@drawable/n_2_24" android:layout_gravity="left"/>
		    <ImageButton
		        android:id="@+id/shop_detail_tab_btn_3"
		        android:layout_width="120px"
		        android:layout_height="48px"
		        android:background="@drawable/n_2_25" android:layout_gravity="left"/>
		    <ImageButton
		        android:id="@+id/shop_detail_tab_btn_4"
		        android:layout_width="122px"
		        android:layout_height="48px"
		        android:background="@drawable/n_2_26" android:layout_gravity="left"/>
	
	</LinearLayout>
	
    <ListView
	        android:id="@+id/shop_detail_introduce_listview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginTop="318px"
	     	android:background="#FFf5f5f5"
       		android:layout_above="@id/shop_main_layout_2"  />
    <LinearLayout
		android:id="@+id/shop_main_layout_2"
		android:layout_width="480px"
		android:layout_height="74px"
		android:background="@drawable/tab_n1"
