	    <TextView
	        android:id="@+id/shop_detail_main_cate"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="172px"
	        android:layout_marginTop="85px"
	        android:text="24시 키스방"
	        android:textColor="#FF505050"
	        android:textSize="18px" android:layout_gravity="right" android:layout_marginRight="75px"/>
	
	    <TextView
	        android:id="@+id/shop_detail_main_tel"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="left"
	        android:layout_marginLeft="170px"
