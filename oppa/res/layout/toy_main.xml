<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" android:background="#FFF5F5F5">
    <!-- 상단바 -->
    
    <LinearLayout
        android:id="@+id/toy_main_layout_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
	    <ImageView
	        android:id="@+id/imageView1"
	        android:layout_width="480px"
	        android:layout_height="66px"
	        android:src="@drawable/main_title_bar" />
	     <ImageView
	    	android:id="@+id/imageView2"
	        android:layout_width="150px"
	        android:layout_height="60px"
	        android:layout_marginTop="-61px"
	        android:src="@drawable/toy_main_title" android:layout_gravity="center_horizontal"/>
	     <Button
             android:id="@+id/toy_main_write"
             android:layout_width="90px"
             android:layout_height="30px"
             android:layout_marginLeft="370px"
             android:layout_marginTop="-41px"
             android:layout_marginBottom="10px"
             android:background="@drawable/common_write_btn" android:layout_gravity="left" android:visibility="gone"/>
	     
	    <LinearLayout
	        android:id="@+id/toy_main_tab"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal">
		    <ImageButton
		        android:id="@+id/toy_main_tab_btn_1"
		        android:layout_width="168px"
		        android:layout_height="48px"
		        android:background="@drawable/toy_main_tab_1on" android:layout_gravity="left"/>
		    <ImageButton
		        android:id="@+id/toy_main_tab_btn_2"
		        android:layout_width="160px"
		        android:layout_height="48px"
		        android:background="@drawable/toy_main_tab_2" android:layout_gravity="left"/>
		    <ImageButton
		        android:id="@+id/toy_main_tab_btn_3"
		        android:layout_width="152px"
		        android:layout_height="48px"
		        android:background="@drawable/toy_main_tab_3" android:layout_gravity="left"/>
	
	    </LinearLayout>
    </LinearLayout>
    <LinearLayout
		android:id="@+id/toy_main_layout_2"
		android:layout_width="480px"
		android:layout_height="74px"
		android:background="@drawable/tab_n1"
		android:orientation="vertical" 
		android:layout_gravity="bottom" 
		android:layout_weight="1" 
		android:layout_alignParentBottom="true"  >
        <LinearLayout
			android:id="@+id/toy_main_layout_4"
			android:layout_width="480px"
			android:layout_height="74px"
			android:orientation="horizontal"   >
			<Button
				android:id="@+id/toy_main_tab_btn_11"
				android:layout_width="96px"
				android:layout_height="74px"
				android:background="@drawable/tab_n2_xml"
				android:layout_gravity="left"/>
			<Button
				android:id="@+id/toy_main_tab_btn_21"
				android:layout_width="96px"
				android:layout_height="74px"
				android:background="@drawable/tab_n3_xml"
				android:layout_gravity="left"/>
			
			<ImageView
				android:id="@+id/toy_main_tab_btn_31"
				android:layout_width="96px"
				android:layout_height="74px"
				android:background="@drawable/tab_03_on"
				android:layout_gravity="left"/>
					
			<Button
				android:id="@+id/toy_main_tab_btn_41"
				android:layout_width="96px"
				android:layout_height="74px"
				android:background="@drawable/tab_n5_xml"
				android:layout_gravity="left"/>
					
			<Button
				android:id="@+id/toy_main_tab_btn_51"
				android:layout_width="96px"
				android:layout_height="74px"
				android:background="@drawable/tab_n6_xml"
				android:layout_gravity="left"/>
            
        </LinearLayout>
        
        

	 </LinearLayout>
    <LinearLayout
	        android:id="@+id/toy_main_list_content_more"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" 
         	android:layout_above="@id/toy_main_layout_2">
	    <Button
	        	android:id="@+id/toy_main_list_more_123"
	            android:layout_width="480px"
	            android:layout_height="39px"
	          	android:layout_weight="1"
	           	android:background="@drawable/shop_list_view_more_btn"
	           	/>	
	</LinearLayout>

	<ListView
	        android:id="@+id/toy_mainpage_listview"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginTop="114px"
	     	android:background="#FFf5f5f5"
       		android:layout_above="@id/toy_main_list_content_more"  />
</RelativeLayout>