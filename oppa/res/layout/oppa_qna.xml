<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:id="@+id/linearlayout_qna" android:background="#FFF5F5F5"
    android:layout_marginTop="10px" android:layout_marginBottom="10px">

    <LinearLayout
        android:id="@+id/qna_q_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical" 
        android:layout_marginTop="10px" android:layout_marginBottom="10px">

        <LinearLayout
	        android:id="@+id/qna_q_layout_1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:gravity="center_vertical" >
	        <ImageView
	            android:id="@+id/img_view_question"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/n_2_16" />
	
	        <TextView
	            android:id="@+id/txt_qna_question"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="Large Text"
	            android:layout_marginLeft="10px" android:textColor="#FF323232"/>
	

		</LinearLayout>
	
       <LinearLayout
	        android:id="@+id/qna_q_layout_10"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:gravity="center_vertical" >
			<ImageView
				android:id="@+id/bbs_title_writer_2_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
				android:background="@drawable/t_1" />
	        <TextView
		    	android:id="@+id/img_qwriter"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10px"
		        android:layout_weight="1"
		        android:text="홍길동 1234" android:textSize="15px"
		        android:layout_marginTop="5px" android:textColor="#FF646464"/>	        	
        </LinearLayout>

        <Button
	        android:id="@+id/img_qna_reply"
	        android:layout_width="110px"
	        android:layout_height="44px"
	        android:background="@drawable/btn_02"
	        android:layout_marginRight="10px"
	        android:layout_gravity="right"/>
        	        
    </LinearLayout>

    <LinearLayout
        android:id="@+id/qna_a_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center_vertical" 
        android:orientation="vertical"
         android:layout_marginTop="10px" android:layout_marginBottom="10px"
         >
        
        <LinearLayout
	        android:id="@+id/qna_a_layout_1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:gravity="center_vertical" >

	        <ImageView
	            android:id="@+id/img_view_answer"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:src="@drawable/shop_detail_qna_a" />
	        <TextView
	            android:id="@+id/txt_qna_answer"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="Large Text"
	            android:layout_marginLeft="10px" android:textColor="#FF323232"/>
        
        
        </LinearLayout>
        
        <LinearLayout
	        android:id="@+id/qna_q_layout_11"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="10dip"
	        android:gravity="center_vertical" >
			<ImageView
				android:id="@+id/bbs_title_writer_4_icon"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginLeft="20px"
				android:background="@drawable/t_1" />
	        <TextView
		    	android:id="@+id/img_awriter"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:layout_marginLeft="10px"
		        android:layout_marginTop="5px"
		        android:text="#FF646464"
		         android:textSize="15px" android:textColor="#FF646464"/>       	
        </LinearLayout>

    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/qna_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:gravity="center_vertical" android:background="#FF969696"
         android:layout_marginTop="20px" android:layout_marginBottom="20px"/>

</LinearLayout>