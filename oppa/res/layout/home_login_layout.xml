<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF5F5F5" >
	<!-- 상단바 -->
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="480px"
        android:layout_height="66px"
        android:src="@drawable/main_title_bar" />
    
    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="285px"
        android:layout_height="75px"
        android:layout_gravity="left"
        android:layout_marginLeft="101px"  
        android:layout_marginTop="70px"
        android:src="@drawable/home_login_maintitle" />
        
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="120px"
        android:layout_height="60px"
        android:src="@drawable/home_login_title"
        android:layout_gravity="center_horizontal" />
    
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="210px"
        android:layout_height="210px"
        android:src="@drawable/home_login_adult_logo" android:layout_gravity="left" android:layout_marginLeft="126px" android:layout_marginTop="145px"/>



    <TextView
        android:id="@+id/textView1"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginLeft="50px"
        android:layout_marginTop="360px"
        android:text=" 이정보 내용은 청소년 유해매체물로 정보통신망이용촉진법\n 및 정보보호등에 관한 법률및 청소년 보호법 규정에 의하여\n 19세미만의 청소년은 사용할 수 없습니다."
        android:textColor="#FF969696"
        android:textSize="15px" />

	<!-- 아이디 비번 입력창 -->
	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="ID"
	    android:textAppearance="?android:attr/textAppearanceMedium" 
	    android:layout_gravity="left"
        android:layout_marginLeft="70px"  
        android:layout_marginTop="448px"
        android:textColor="#FF323232"/>

	<TextView
	    android:id="@+id/textView1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:text="비밀번호"
	    android:textAppearance="?android:attr/textAppearanceMedium" 
	    android:layout_gravity="left"
        android:layout_marginLeft="40px"  
        android:layout_marginTop="492px"
        android:textColor="#FF323232"/>
     
    <EditText
        android:id="@+id/home_login_id_textbox"
        android:layout_width="190px"
        android:layout_height="31dp"
        android:layout_gravity="left"
        android:layout_marginLeft="114px"
        android:layout_marginTop="448px"
        android:lines="1"
        android:singleLine="true"
        android:textSize="18px" >

	    <requestFocus />
	</EditText>   

	<EditText
	    android:id="@+id/home_login_password_textbox"
	    android:layout_width="190px"
	    android:layout_height="31dp"
	    android:layout_gravity="left"
	    android:layout_marginLeft="114px"
	    android:layout_marginTop="490px"
	    android:inputType="textPassword"
	    android:singleLine="true"
	    android:textSize="18px" />

	<!-- 버튼-->

	<Button
	    android:id="@+id/home_login_login"
	    android:layout_width="150px"
	    android:layout_height="90px"
	    android:layout_gravity="left"
	    android:layout_marginLeft="307px"
	    android:layout_marginTop="448px"
	    android:background="@drawable/home_login_login_but"
	    android:text="" />
        
    <Button
        android:id="@+id/home_login_account_create_btn"
        android:layout_width="185px"
        android:layout_height="57px"
        android:layout_gravity="left"
        android:layout_marginLeft="55px"
        android:layout_marginTop="621px"
        android:background="@drawable/home_login_accout_create_xml"
        android:text="" />
        
     <Button
         android:id="@+id/home_login_account_find_btn"
         android:layout_width="186px"
         android:layout_height="57px"
         android:layout_gravity="left"
         android:layout_marginLeft="243px"
         android:layout_marginTop="621px"
         android:background="@drawable/home_login_account_find_xml"
         android:text="" />

	<!-- 체크박스-->

	<CheckBox
	    android:id="@+id/home_login_id_save_check"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="left"
	    android:layout_marginLeft="114px"
	    android:layout_marginTop="548px"
	    android:text="ID 저장"
	    android:textColor="#FF323232" />

	<CheckBox
	    android:id="@+id/home_login_auto_save_check"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="left"
	    android:layout_marginLeft="247px"
	    android:layout_marginTop="548px"
	    android:text="자동 로그인"
	    android:textColor="#FF323232" />

</FrameLayout >