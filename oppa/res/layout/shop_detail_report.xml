<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recruit_detail_list_row" 
    android:orientation="vertical" android:background="#E2343B" >
    
    
    <LinearLayout
		 android:id="@+id/recruit_more_detail_list_row_1"
		 android:layout_width="match_parent"
		 android:layout_height="wrap_content"
		 android:orientation="vertical" 
		 android:background="#FFFFFF">
	     <TextView
	       	android:id="@+id/recruit_detail_list_row_name"
	       	android:layout_width="match_parent"
	       	android:layout_height="wrap_content"
	       	android:ellipsize="end"
	       	android:lines="1"
	       	android:maxLines="1"
	       	android:text="채용 제목"
	       	android:textColor="#000000"
	    	android:textSize="25px"
	    	android:layout_marginLeft="15px" />
	</LinearLayout >
	

    <LinearLayout
        android:id="@+id/recruit_more_detail_list_row_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
	     
        <LinearLayout
			 android:id="@+id/recruit_more_detail_list_row_2_1"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:orientation="vertical" 
			 >
			 
            <ImageView
                android:id="@+id/recruit_more_detail_list_row_2_1_image"
                android:layout_width="152px"
                android:layout_height="116px"
                android:layout_marginLeft="10dip"
                android:background="@drawable/m_app_004_bar" android:scaleType="fitXY" 
				android:layout_marginTop="10px"
                android:layout_marginBottom="10px"/>
            
		</LinearLayout >


		<LinearLayout
			 android:id="@+id/recruit_more_detail_list_row_2_2"
			 android:layout_width="wrap_content"
			 android:layout_height="match_parent"
			 android:orientation="vertical" 
			 >
			 <LinearLayout
				 android:id="@+id/recruit_more_detail_list_row_2_2"
				 android:layout_width="wrap_content"
				 android:layout_height="match_parent"
				 android:orientation="vertical" 
				 >
				<ImageView
					android:id="@+id/recruit_more_detail_list_row_2_2_1_image"
					android:layout_width="94px"
					android:layout_height="42px"
					android:layout_marginLeft="10dip"
					android:background="@drawable/m_app_004_bar" android:scaleType="fitXY" android:layout_marginTop="10px"
					android:layout_marginBottom="10px"
					android:layout_marginLeft="10px"/>
				<ImageView
					android:id="@+id/recruit_more_detail_list_row_2_2_2_image"
					android:layout_width="94px"
					android:layout_height="42px"
					android:layout_marginLeft="10dip"
					android:background="@drawable/m_app_004_bar" android:scaleType="fitXY" android:layout_marginTop="10px"
					android:layout_marginBottom="10px"/>
			</LinearLayout > 

			<TextView
				android:id="@+id/recruit_detail_list_row_name"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="15px"
				android:ellipsize="end"
				android:gravity="center_horizontal"
				android:lines="1"
				android:maxLines="1"
				android:text="채용 제목"
				android:textColor="#FFFFFF"
				android:textSize="25px" />
		</LinearLayout > 





	</LinearLayout >
</LinearLayout>