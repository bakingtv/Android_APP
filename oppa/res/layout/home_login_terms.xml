<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFF5F5F5" >
	<!-- 상단바 -->
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="480px"
        android:layout_height="66px"
        android:src="@drawable/main_title_bar" />
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="330px"
        android:layout_height="60px"
        android:src="@drawable/home_login_terms"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/home_terms_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" android:layout_gravity="left" android:layout_marginTop="70px" android:layout_marginLeft="5px"/>

    <Button
        android:id="@+id/home_login_terms_back"
        android:layout_width="0px"
        android:layout_height="0px"
        android:layout_marginLeft="5px"
        android:layout_marginTop="15px"
        android:background="@drawable/common_back_btn" android:layout_gravity="left"/>

</FrameLayout >