<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/shop_detail_qna_row123" android:background="#FFF5F5F5">
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical" android:background="#FFF5F5F5">

        <ImageView
            android:id="@+id/img_view_question"
            android:layout_width="15px"
            android:layout_height="15px"
            android:src="@drawable/n_2_16" android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/txt_qna_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="젠장할 \n 바보 멍청이"
            android:textColor="#FF323232"
            android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="15px" android:layout_marginLeft="10px"/>

    </LinearLayout>

        <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/img_view_answer"
            android:layout_width="15px"
            android:layout_height="15px"
            android:src="@drawable/shop_detail_qna_a" />

        <TextView
            android:id="@+id/txt_qna_answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이런..."
            android:textColor="#FF323232"
            android:textAppearance="?android:attr/textAppearanceLarge" android:textSize="15px" android:layout_marginLeft="10px"/>

    </LinearLayout>

 
</LinearLayout >