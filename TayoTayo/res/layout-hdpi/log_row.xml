<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1"
    android:gravity="center" >
    
   <FrameLayout
	   	android:id="@+id/main_row_1"
	    android:layout_width="480px"
	    android:layout_height="77px"
	    android:background="@drawable/record_list"
	    android:orientation="vertical">
		<TextView
		    android:id="@+id/main_row_day"
		    android:layout_width="140px"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="10px"
		    android:layout_marginLeft="5px"
		    android:layout_marginRight="20px"
		    android:layout_marginTop="25px"
		    android:ellipsize="end"
		    android:gravity="center_horizontal"
		    android:text="12월 31일"
		    android:textColor="#000000"
		    android:textSize="30px" />
		
		<TextView
		    android:id="@+id/main_row_day_2"
		    android:layout_width="240px"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="10px"
		    android:layout_marginLeft="155px"
		    android:layout_marginRight="5px"
		    android:layout_marginTop="8px"
		    android:ellipsize="end"
		    android:gravity="center_horizontal"
		    android:text="2013년 03월 14일 (수) 탑승"
		    android:textColor="#000000"
		    android:textSize="18px" />
		
		
		<TextView
		    android:id="@+id/main_row_number"
		    android:layout_width="240px"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="10px"
		    android:layout_marginLeft="155px"
		    android:layout_marginRight="5px"
		    android:layout_marginTop="45px"
		    android:ellipsize="end"
		    android:gravity="center_horizontal"
		    android:text="서울 41 바 1234"
		    android:textColor="#000000"
		    android:textSize="18px" />

		<ImageView
		    android:id="@+id/main_row_call"
		    android:layout_width="61px"
		    android:layout_height="61px"
		    android:layout_marginLeft="408px"
		    android:layout_marginTop="5px"
		    android:background="@drawable/make_call" />
       
	</FrameLayout >
	
    

</LinearLayout>