<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF5F5F5" 
    android:orientation="vertical"
    android:layout_weight="1">
    
    <LinearLayout
	   	android:id="@+id/todaylist_intro_1"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:adjustViewBounds="true"
	    android:background="#FFFFFF">
	    
        <ImageView
	        android:id="@+id/todaylist_main_image"
	        android:layout_width="80sp"
	        android:layout_height="50sp"
	        android:layout_marginLeft="9px"
	        android:layout_marginTop="10px"
	        android:layout_marginBottom="13px"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/holytube_contents01" />
	    
        <LinearLayout
	   		android:id="@+id/shop_intro_1_1"
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="vertical" >
	    	
		    <TextView
		        android:id="@+id/todaylist_intro_name"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="5sp"
		        android:layout_marginRight="5sp"
		        android:layout_marginTop="7sp"
		        android:text="이름 : 알려고 하지마"
		        android:textColor="#FF323232"
		        android:textSize="18sp" />
		
		    <TextView
		        android:id="@+id/todaylist_intro_body"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10px"
		        android:layout_marginTop="5px"
		         android:layout_marginRight="5sp"
		        android:text="키 : 165cm / 몸무게 : 45kg"
		        android:textColor="#FF323232"
		        android:textSize="15sp" />
	    </LinearLayout >
	</LinearLayout >
	
    
    <LinearLayout
		android:id="@+id/todaylist_intro_2"
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >
        <ImageView
		    android:id="@+id/todaylist_intro_image"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:src="@drawable/back_list01" android:scaleType="fitXY"/>
        
        <LinearLayout
			android:id="@+id/todaylist_intro_4"
			android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:background="@drawable/bar01" >


			<TextView
			     android:id="@+id/todaylist_intro_content"
			     android:layout_gravity="center"
			     android:layout_width="wrap_content"
			     android:layout_height="wrap_content"
			     android:layout_marginTop="3sp"
			     android:text="영상리스트"
			     android:textColor="#FFFFFFFF"
			     android:textSize="18sp" />
		</LinearLayout>
	</LinearLayout>
	
    <RelativeLayout 
		android:id="@+id/todaylist_intro_3"
		android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">
        
        <ImageView
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:adjustViewBounds="true"
		    android:src="@drawable/slide_bg" />
        
        <ImageView
	        android:id="@+id/play"
	        android:layout_width="90sp"
	        android:layout_height="50sp"
	        android:layout_marginLeft="40sp"
	        android:layout_marginTop="15sp"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/slide_play" />
        <ImageView
	        android:id="@+id/like"
	        android:layout_width="90sp"
	        android:layout_height="50sp"
	        android:layout_marginLeft="200sp"
	        android:layout_marginTop="15sp"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/slide_like" />
        
        <ImageView
	        android:id="@+id/down"
	        android:layout_width="120sp"
	        android:layout_height="50sp"
	        android:layout_marginLeft="40sp"
	        android:layout_marginTop="55sp"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/slide_download" />
        
        <ImageView
	        android:id="@+id/share"
	        android:layout_width="120sp"
	        android:layout_height="50sp"
	        android:layout_marginLeft="200sp"
	        android:layout_marginTop="55sp"
	        android:layout_gravity="center_vertical"
	        android:src="@drawable/slide_share" />
        
    </RelativeLayout >    
</LinearLayout >


